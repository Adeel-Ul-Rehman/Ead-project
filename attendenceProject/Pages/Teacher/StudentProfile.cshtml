@page "{studentId:int}"
@model attendenceProject.Pages.Teacher.StudentProfileModel
@{
    ViewData["Title"] = "Student Profile";
}

<div class="container mx-auto px-4 py-6">
    <!-- Header -->
    <div class="mb-6">
        <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-xl shadow-lg p-6 text-white">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-full p-4">
                        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold">@Model.Student.FullName</h1>
                        <p class="text-white text-opacity-90 mt-1">Roll No: @Model.Student.RollNo</p>
                    </div>
                </div>
                <a href="/Teacher/Students" class="bg-white bg-opacity-20 hover:bg-opacity-30 backdrop-blur-sm text-white font-semibold py-2 px-4 rounded-lg transition duration-300">
                    ‚Üê Back
                </a>
            </div>
        </div>
    </div>

    <!-- Student Info Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <!-- Basic Info -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Basic Information
            </h3>
            <div class="space-y-3 text-sm">
                <div>
                    <span class="text-gray-500 dark:text-gray-400">Email:</span>
                    <p class="font-semibold text-gray-800 dark:text-white">@Model.Student.Email</p>
                </div>
                <div>
                    <span class="text-gray-500 dark:text-gray-400">Father Name:</span>
                    <p class="font-semibold text-gray-800 dark:text-white">@Model.Student.FatherName</p>
                </div>
                <div>
                    <span class="text-gray-500 dark:text-gray-400">Section:</span>
                    <p class="font-semibold text-gray-800 dark:text-white">@Model.Student.SectionName</p>
                </div>
                <div>
                    <span class="text-gray-500 dark:text-gray-400">Badge:</span>
                    <p class="font-semibold text-gray-800 dark:text-white">@Model.Student.BadgeName</p>
                </div>
            </div>
        </div>

        <!-- Overall Attendance -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Overall Attendance
            </h3>
            <div class="text-center">
                @{
                    var overallPercentage = Model.OverallAttendance.AttendancePercentage;
                    var colorClass = overallPercentage >= 75 ? "text-green-600" : overallPercentage >= 50 ? "text-yellow-600" : "text-red-600";
                }
                <div class="text-5xl font-bold @colorClass mb-2">@overallPercentage.ToString("F1")%</div>
                <div class="grid grid-cols-3 gap-2 mt-4 text-xs">
                    <div class="bg-green-50 dark:bg-green-900 p-2 rounded">
                        <div class="text-green-700 dark:text-green-200 font-bold">@Model.OverallAttendance.PresentCount</div>
                        <div class="text-gray-600 dark:text-gray-400">Present</div>
                    </div>
                    <div class="bg-red-50 dark:bg-red-900 p-2 rounded">
                        <div class="text-red-700 dark:text-red-200 font-bold">@Model.OverallAttendance.AbsentCount</div>
                        <div class="text-gray-600 dark:text-gray-400">Absent</div>
                    </div>
                    <div class="bg-yellow-50 dark:bg-yellow-900 p-2 rounded">
                        <div class="text-yellow-700 dark:text-yellow-200 font-bold">@Model.OverallAttendance.LateCount</div>
                        <div class="text-gray-600 dark:text-gray-400">Late</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lecture Stats -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                Lecture Statistics
            </h3>
            <div class="space-y-3">
                <div class="flex justify-between items-center">
                    <span class="text-gray-600 dark:text-gray-400 text-sm">Total Lectures:</span>
                    <span class="font-bold text-gray-800 dark:text-white">@Model.OverallAttendance.TotalLectures</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-gray-600 dark:text-gray-400 text-sm">Attended:</span>
                    <span class="font-bold text-green-600">@Model.OverallAttendance.PresentCount</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-gray-600 dark:text-gray-400 text-sm">Missed:</span>
                    <span class="font-bold text-red-600">@Model.OverallAttendance.AbsentCount</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Trend Chart -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-6">
        <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
            </svg>
            Attendance Trend (Last 10 Lectures)
        </h3>
        <canvas id="attendanceTrendChart" height="80"></canvas>
    </div>

    <!-- Course-wise Performance -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 mb-6">
        <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            Course-wise Performance
        </h3>
        
        @if (Model.CoursePerformance.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                @foreach (var course in Model.CoursePerformance)
                {
                    var percentage = course.AttendancePercentage;
                    var barColor = percentage >= 75 ? "bg-green-500" : percentage >= 50 ? "bg-yellow-500" : "bg-red-500";
                    
                    <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4">
                        <div class="flex justify-between items-start mb-2">
                            <div>
                                <h4 class="font-bold text-gray-800 dark:text-white">@course.CourseName</h4>
                                <p class="text-xs text-gray-500 dark:text-gray-400">@course.CourseCode</p>
                            </div>
                            <span class="text-2xl font-bold @(percentage >= 75 ? "text-green-600" : percentage >= 50 ? "text-yellow-600" : "text-red-600")">
                                @percentage.ToString("F1")%
                            </span>
                        </div>
                        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 mb-2">
                            <div class="@barColor h-3 rounded-full transition-all duration-500" style="width: @percentage%"></div>
                        </div>
                        <div class="grid grid-cols-3 gap-2 text-xs text-center">
                            <div>
                                <span class="font-bold text-green-600">@course.PresentCount</span>
                                <span class="text-gray-500 dark:text-gray-400"> Present</span>
                            </div>
                            <div>
                                <span class="font-bold text-red-600">@course.AbsentCount</span>
                                <span class="text-gray-500 dark:text-gray-400"> Absent</span>
                            </div>
                            <div>
                                <span class="font-bold text-yellow-600">@course.LateCount</span>
                                <span class="text-gray-500 dark:text-gray-400"> Late</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <!-- Course Comparison Chart -->
            <canvas id="courseComparisonChart" height="100"></canvas>
        }
        else
        {
            <p class="text-gray-500 dark:text-gray-400 text-center py-8">No course data available</p>
        }
    </div>

    <!-- Recent Attendance History -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
        <h3 class="text-xl font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Recent Attendance History
        </h3>
        
        @if (Model.RecentAttendance.Any())
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                    <thead class="bg-gray-50 dark:bg-gray-700">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Date</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Course</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Time</th>
                            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Status</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var record in Model.RecentAttendance)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-4 py-3 text-sm text-gray-800 dark:text-white">@record.Date.ToString("MMM dd, yyyy")</td>
                                <td class="px-4 py-3 text-sm text-gray-800 dark:text-white">
                                    <div>@record.CourseName</div>
                                    <div class="text-xs text-gray-500 dark:text-gray-400">@record.CourseCode</div>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400">@record.Time</td>
                                <td class="px-4 py-3 text-center">
                                    @{
                                        var statusClass = record.Status switch
                                        {
                                            "Present" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200",
                                            "Absent" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200",
                                            "Late" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200",
                                            _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200"
                                        };
                                    }
                                    <span class="@statusClass px-3 py-1 rounded-full text-xs font-semibold">@record.Status</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-gray-500 dark:text-gray-400 text-center py-8">No attendance records found</p>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Attendance Trend Chart
        const trendCtx = document.getElementById('attendanceTrendChart').getContext('2d');
        const trendData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.TrendData));
        
        new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: trendData.map(d => d.date),
                datasets: [{
                    label: 'Attendance Status',
                    data: trendData.map(d => d.status === 'Present' ? 1 : (d.status === 'Late' ? 0.5 : 0)),
                    borderColor: 'rgb(79, 70, 229)',
                    backgroundColor: 'rgba(79, 70, 229, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return trendData[context.dataIndex].status;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 1,
                        ticks: {
                            callback: function(value) {
                                return value === 1 ? 'Present' : value === 0.5 ? 'Late' : 'Absent';
                            }
                        }
                    }
                }
            }
        });

        // Course Comparison Chart
        @if (Model.CoursePerformance.Any())
        {
            <text>
            const courseCtx = document.getElementById('courseComparisonChart').getContext('2d');
            new Chart(courseCtx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CoursePerformance.Select(c => c.CourseCode).ToList())),
                    datasets: [{
                        label: 'Attendance %',
                        data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CoursePerformance.Select(c => c.AttendancePercentage).ToList())),
                        backgroundColor: [
                            'rgba(16, 185, 129, 0.8)',
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(139, 92, 246, 0.8)',
                            'rgba(236, 72, 153, 0.8)',
                            'rgba(245, 158, 11, 0.8)'
                        ],
                        borderColor: [
                            'rgb(16, 185, 129)',
                            'rgb(59, 130, 246)',
                            'rgb(139, 92, 246)',
                            'rgb(236, 72, 153)',
                            'rgb(245, 158, 11)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    }
                }
            });
            </text>
        }
    </script>
}
