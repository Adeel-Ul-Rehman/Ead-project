@page
@model attendenceProject.Pages.Teacher.Requests.ExtensionModel
@{
    ViewData["Title"] = "Attendance Extension Requests";
}

<div class="mb-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-gray-800 dark:text-white flex items-center gap-3">
                <span class="text-4xl">‚è∞</span>
                <span>Attendance Extension Requests</span>
            </h1>
            <p class="text-gray-600 dark:text-gray-400 mt-2">Request extension for missed attendance or to edit after the 20-minute window</p>
        </div>
        <a href="/Teacher/Attendance" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
            ‚Üê Back to Attendance
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty(TempData["Success"] as string))
{
    <div class="mb-6 bg-green-50 dark:bg-green-900 border-l-4 border-green-500 p-4 rounded">
        <p class="text-green-700 dark:text-green-200">@TempData["Success"]</p>
    </div>
}

@if (!string.IsNullOrEmpty(TempData["Error"] as string))
{
    <div class="mb-6 bg-red-50 dark:bg-red-900 border-l-4 border-red-500 p-4 rounded">
        <p class="text-red-700 dark:text-red-200">@TempData["Error"]</p>
    </div>
}

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- MISSED ATTENDANCE REQUEST -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg">
        <div class="bg-gradient-to-r from-red-600 to-orange-600 text-white px-6 py-4 rounded-t-lg">
            <h2 class="text-xl font-bold flex items-center gap-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Missed Attendance Request
            </h2>
            <p class="text-sm mt-1 text-white/90">For lectures where you never marked attendance</p>
        </div>
        <div class="p-6">
            @if (Model.MissedLectures.Any())
            {
                <form method="post">
                    <input type="hidden" asp-for="RequestType" value="Missed" />
                    
                    <div class="mb-4">
                        <label class="block text-gray-700 dark:text-gray-300 font-semibold mb-2">Select Lecture <span class="text-red-500">*</span></label>
                        <select asp-for="LectureId" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-white" required>
                            <option value="">-- Choose a lecture --</option>
                            @foreach (var lecture in Model.MissedLectures)
                            {
                                <option value="@lecture.Id">@lecture.Display</option>
                            }
                        </select>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Lectures past the 10-minute marking window</p>
                    </div>

                    <div class="mb-6">
                        <label class="block text-gray-700 dark:text-gray-300 font-semibold mb-2">Reason for Missing <span class="text-red-500">*</span></label>
                        <textarea asp-for="Reason" rows="4" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-red-500 dark:bg-gray-700 dark:text-white" placeholder="Example: I was stuck in traffic / Had an emergency..." required></textarea>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">If approved, you'll have 24 hours to mark attendance.</p>
                    </div>

                    <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition duration-300">
                        Request for Missed Attendance
                    </button>
                </form>
            }
            else
            {
                <div class="text-center py-8">
                    <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <p class="text-gray-500 dark:text-gray-400 text-lg">No missed lectures available</p>
                    <p class="text-gray-400 dark:text-gray-500 text-sm mt-2">All attendance has been marked or requests already exist</p>
                </div>
            }
        </div>
    </div>

    <!-- EDIT ATTENDANCE REQUEST -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg">
        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-6 py-4 rounded-t-lg">
            <h2 class="text-xl font-bold flex items-center gap-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Edit Attendance Request
            </h2>
            <p class="text-sm mt-1 text-white/90">For lectures where you need to edit after 20 minutes</p>
        </div>
        <div class="p-6">
            @if (Model.EditRequestLectures.Any())
            {
                <form method="post">
                    <input type="hidden" asp-for="RequestType" value="Edit" />
                    
                    <div class="mb-4">
                        <label class="block text-gray-700 dark:text-gray-300 font-semibold mb-2">Select Lecture <span class="text-red-500">*</span></label>
                        <select asp-for="LectureId" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" required>
                            <option value="">-- Choose a lecture --</option>
                            @foreach (var lecture in Model.EditRequestLectures)
                            {
                                <option value="@lecture.Id">@lecture.Display</option>
                            }
                        </select>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Lectures past the 20-minute edit window</p>
                    </div>

                    <div class="mb-6">
                        <label class="block text-gray-700 dark:text-gray-300 font-semibold mb-2">Reason for Edit <span class="text-red-500">*</span></label>
                        <textarea asp-for="Reason" rows="4" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="Example: Student was late but I marked absent / Made marking error..." required></textarea>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">If approved, you'll have 24 hours to edit attendance.</p>
                    </div>

                    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition duration-300">
                        Request for Edit Access
                    </button>
                </form>
            }
            else
            {
                <div class="text-center py-8">
                    <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <p class="text-gray-500 dark:text-gray-400 text-lg">No lectures available for edit</p>
                    <p class="text-gray-400 dark:text-gray-500 text-sm mt-2">Either within edit window or requests already exist</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Info Box -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg mb-8">
    <div class="bg-gradient-to-r from-purple-600 to-pink-600 text-white px-6 py-4 rounded-t-lg">
        <h2 class="text-xl font-bold flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Understanding Extension Types
        </h2>
    </div>
    <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-4">
                <h3 class="font-bold text-lg text-red-600 dark:text-red-400 flex items-center gap-2">
                    <span>üìù</span> Missed Attendance
                </h3>
                <div class="space-y-3 text-sm text-gray-600 dark:text-gray-400">
                    <p><strong class="text-gray-800 dark:text-white">When to use:</strong> You completely missed marking attendance for a lecture.</p>
                    <p><strong class="text-gray-800 dark:text-white">Time limit:</strong> 10 minutes after lecture start.</p>
                    <p><strong class="text-gray-800 dark:text-white">What happens:</strong> If approved, lecture becomes available to mark from scratch.</p>
                    <p><strong class="text-gray-800 dark:text-white">Example:</strong> "I was in a faculty meeting and couldn't attend the lecture."</p>
                </div>
            </div>
            
            <div class="space-y-4">
                <h3 class="font-bold text-lg text-blue-600 dark:text-blue-400 flex items-center gap-2">
                    <span>‚úèÔ∏è</span> Edit Attendance
                </h3>
                <div class="space-y-3 text-sm text-gray-600 dark:text-gray-400">
                    <p><strong class="text-gray-800 dark:text-white">When to use:</strong> You already marked attendance but need to make changes.</p>
                    <p><strong class="text-gray-800 dark:text-white">Time limit:</strong> 20 minutes after lecture start (10 min mark + 10 min edit).</p>
                    <p><strong class="text-gray-800 dark:text-white">What happens:</strong> If approved, you can modify existing attendance records.</p>
                    <p><strong class="text-gray-800 dark:text-white">Example:</strong> "I accidentally marked a present student as absent."</p>
                </div>
            </div>
        </div>

        <div class="mt-6 p-4 bg-yellow-50 dark:bg-yellow-900/20 border-l-4 border-yellow-500 rounded">
            <p class="text-sm text-gray-700 dark:text-gray-300">
                <strong>‚ö†Ô∏è Important:</strong> Both requests give you 24 hours after approval. Provide genuine reasons as frequent requests may be flagged.
            </p>
        </div>
    </div>
</div>

<!-- My Requests -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg">
    <div class="bg-gradient-to-r from-green-600 to-teal-600 text-white px-6 py-4 rounded-t-lg">
        <h2 class="text-xl font-bold flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            My Extension Requests
        </h2>
    </div>
    <div class="p-6">
        @if (Model.MyRequests.Any())
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                    <thead class="bg-gray-50 dark:bg-gray-700">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Type</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Requested</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Lecture</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Course</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Reason</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Status</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Action</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var request in Model.MyRequests)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @{
                                        var typeClass = request.RequestType == "Missed" 
                                            ? "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200" 
                                            : "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200";
                                        var typeIcon = request.RequestType == "Missed" ? "üìù" : "‚úèÔ∏è";
                                    }
                                    <span class="@typeClass px-2 py-1 rounded text-xs font-semibold inline-flex items-center gap-1">
                                        <span>@typeIcon</span>
                                        @request.RequestType
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                                    @request.RequestedAt.ToString("MMM dd, hh:mm tt")
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
                                    @request.LectureDate.ToString("MMM dd, hh:mm tt")
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900 dark:text-white">
                                    <div class="font-medium">@request.CourseName</div>
                                    <div class="text-xs text-gray-500 dark:text-gray-400">@request.SectionName</div>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-700 dark:text-gray-300 max-w-xs truncate">
                                    <span title="@request.Reason">@request.Reason</span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    @{
                                        var statusClass = request.Status switch
                                        {
                                            "Pending" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200",
                                            "Approved" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200",
                                            "Rejected" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200",
                                            _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200"
                                        };
                                    }
                                    <span class="@statusClass px-3 py-1 rounded-full text-xs font-semibold">@request.Status</span>
                                    @if (request.Status == "Approved" && request.ApprovedAt.HasValue)
                                    {
                                        var deadline = request.ApprovedAt.Value.AddHours(24);
                                        <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                            Until: @deadline.ToString("MMM dd, hh:mm tt")
                                        </div>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    @if (request.Status == "Approved")
                                    {
                                        var buttonText = request.RequestType == "Missed" ? "Mark Attendance" : "Edit Attendance";
                                        <a href="/Teacher/Attendance/Mark?lectureId=@request.LectureId" class="text-green-600 hover:text-green-800 dark:text-green-400 dark:hover:text-green-300 font-semibold">
                                            @buttonText
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400 dark:text-gray-500">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <p class="text-gray-500 dark:text-gray-400 text-lg">No extension requests submitted yet</p>
            </div>
        }
    </div>
</div>
