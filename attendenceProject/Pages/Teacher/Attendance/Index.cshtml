@page
@model attendenceProject.Pages.Teacher.Attendance.IndexModel
@{
    ViewData["Title"] = "Attendance Management";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-white flex items-center gap-3">
        <span class="text-4xl">ðŸ“‹</span>
        <span>Attendance Management</span>
    </h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2">View and manage attendance for your lectures</p>
</div>

<!-- Today's Lectures -->
<div class="mb-8">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-green-600 to-emerald-600 text-white px-6 py-4">
            <h2 class="text-xl font-bold flex items-center gap-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Today's Lectures (@DateTime.Today.ToString("MMM dd, yyyy"))
            </h2>
        </div>
        <div class="p-6">
            @if (Model.TodayLectures.Any())
            {
                <div class="grid grid-cols-1 gap-4">
                    @foreach (var lecture in Model.TodayLectures)
                    {
                        var statusColor = lecture.Status switch
                        {
                            "Ongoing" => "border-green-500 bg-green-50 dark:bg-green-900",
                            "Completed" => "border-blue-500 bg-blue-50 dark:bg-blue-900",
                            "Missed" => "border-red-500 bg-red-50 dark:bg-red-900",
                            _ => "border-gray-500 bg-gray-50 dark:bg-gray-700"
                        };

                        <div class="border-l-4 @statusColor rounded-r-lg p-4">
                            <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
                                <div class="flex-1">
                                    <h3 class="text-lg font-bold text-gray-800 dark:text-white">@lecture.CourseTitle (@lecture.CourseCode)</h3>
                                    <div class="flex flex-wrap gap-4 mt-2 text-sm text-gray-600 dark:text-gray-300">
                                        <span><strong>Section:</strong> @lecture.SectionName</span>
                                        @if (!string.IsNullOrEmpty(lecture.Room))
                                        {
                                            <span><strong>Room:</strong> @lecture.Room</span>
                                        }
                                        <span><strong>Time:</strong> @lecture.StartDateTime.ToString("hh:mm tt") - @lecture.EndDateTime.ToString("hh:mm tt")</span>
                                    </div>
                                    @if (lecture.HasAttendance)
                                    {
                                        <div class="flex gap-3 mt-2 text-xs">
                                            <span class="bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 px-2 py-1 rounded">Present: @lecture.PresentStudents</span>
                                        </div>
                                    }
                                </div>
                                <div class="flex flex-col items-end gap-2">
                                    <span class="@(lecture.Status == "Ongoing" ? "bg-green-500 animate-pulse" : lecture.Status == "Completed" ? "bg-blue-500" : lecture.Status == "Missed" ? "bg-red-500" : "bg-gray-500") text-white px-3 py-1 rounded-full text-xs font-semibold">
                                        @lecture.Status
                                    </span>
                                    
                                    <div class="flex gap-2">
                                        @* Always show View button *@
                                        @if (lecture.LectureId.HasValue)
                                        {
                                            <a href="/Teacher/Attendance/Mark?lectureId=@lecture.LectureId&viewOnly=true" 
                                               class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition duration-300">
                                                View
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="/Teacher/Attendance/Mark?timetableRuleId=@lecture.TimetableRuleId&date=@lecture.StartDateTime.ToString("yyyy-MM-dd")&viewOnly=true" 
                                               class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition duration-300">
                                                View
                                            </a>
                                        }
                                        
                                        @* Show Mark/Edit Attendance button only when can mark *@
                                        @if (lecture.CanMark)
                                        {
                                            @if (lecture.LectureId.HasValue)
                                            {
                                                <a href="/Teacher/Attendance/Mark?lectureId=@lecture.LectureId" 
                                                   class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-lg transition duration-300">
                                                    @(lecture.HasAttendance ? "Edit" : "Mark") Attendance
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="/Teacher/Attendance/Mark?timetableRuleId=@lecture.TimetableRuleId&date=@lecture.StartDateTime.ToString("yyyy-MM-dd")" 
                                                   class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-6 rounded-lg transition duration-300">
                                                    Mark Attendance
                                                </a>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <p class="text-gray-500 dark:text-gray-400 text-lg">No lectures scheduled for today</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Upcoming Lectures -->
<div class="mb-8">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-6 py-4">
            <h2 class="text-xl font-bold flex items-center gap-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Upcoming Lectures
            </h2>
        </div>
        <div class="p-6">
            @if (Model.UpcomingLectures.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                        <thead class="bg-gray-50 dark:bg-gray-700">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Time</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Course</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Section</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Room</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                            @foreach (var lecture in Model.UpcomingLectures)
                            {
                                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                                        @lecture.StartDateTime.ToString("MMM dd, yyyy")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
                                        @lecture.StartDateTime.ToString("hh:mm tt")
                                    </td>
                                    <td class="px-6 py-4 text-sm font-medium text-gray-900 dark:text-white">
                                        @lecture.CourseTitle (@lecture.CourseCode)
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
                                        @lecture.SectionName
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
                                        @(lecture.Room ?? "N/A")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center text-gray-500 dark:text-gray-400 py-8">No upcoming lectures</p>
            }
        </div>
    </div>
</div>

<!-- Completed Lectures -->
<div class="mb-8">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-purple-600 to-pink-600 text-white px-6 py-4">
            <h2 class="text-xl font-bold flex items-center gap-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Recent Completed Lectures
            </h2>
        </div>
        <div class="p-6">
            @if (Model.CompletedLectures.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                        <thead class="bg-gray-50 dark:bg-gray-700">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Date</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Course</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Section</th>
                                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Present</th>
                                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Absent</th>
                                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Excused</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                            @foreach (var lecture in Model.CompletedLectures)
                            {
                                <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-white">
                                        @lecture.StartDateTime.ToString("MMM dd, yyyy")
                                    </td>
                                    <td class="px-6 py-4 text-sm font-medium text-gray-900 dark:text-white">
                                        @lecture.CourseTitle (@lecture.CourseCode)
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
                                        @lecture.SectionName
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                                        <span class="text-green-600 dark:text-green-400 font-semibold">@lecture.PresentStudents</span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                                        <span class="text-red-600 dark:text-red-400 font-semibold">0</span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                                        <span class="text-blue-600 dark:text-blue-400 font-semibold">0</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center text-gray-500 dark:text-gray-400 py-8">No completed lectures</p>
            }
        </div>
    </div>
</div>
