@page
@model attendenceProject.Pages.Teacher.SpecialSessions.DeleteModel
@{
    ViewData["Title"] = "Delete Special Session";
}

<div class="max-w-3xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Delete Special Session</h1>
                <p class="mt-1 text-gray-600">Confirm deletion of this session</p>
            </div>
            <a asp-page="./Index" class="inline-flex items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-lg transition">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to List
            </a>
        </div>
    </div>

    <!-- Warning Banner -->
    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <div class="flex items-start">
            <svg class="w-6 h-6 text-red-600 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
            </svg>
            <div class="flex-1">
                <h3 class="text-red-800 font-semibold text-lg">Are you sure you want to delete this session?</h3>
                <p class="text-red-700 mt-1">This action cannot be undone. The session will be permanently removed from the schedule.</p>
            </div>
        </div>
    </div>

    <!-- Session Details Card -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
        <div class="p-6 space-y-4">
            <!-- Session Type Badge -->
            <div class="flex items-center gap-3">
                <span class="text-4xl">
                    @switch (Model.SessionInfo.LectureType)
                    {
                        case "Quiz": @:üéØ
                            break;
                        case "Test": @:üìù
                            break;
                        case "Lab": @:üî¨
                            break;
                        case "Practical": @:‚öôÔ∏è
                            break;
                        case "Workshop": @:üõ†Ô∏è
                            break;
                        case "GuestLecture": @:üé§
                            break;
                        case "Review": @:üìö
                            break;
                        case "MakeUp": @:üîÑ
                            break;
                        case "Extra": @:‚ûï
                            break;
                        default: @:üìÖ
                            break;
                    }
                </span>
                <div>
                    <h2 class="text-2xl font-bold text-gray-900">@Model.SessionInfo.LectureType</h2>
                    <p class="text-gray-500">Special Session</p>
                </div>
            </div>

            <div class="border-t border-gray-200 pt-4 space-y-3">
                <!-- Course -->
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    <div>
                        <p class="text-sm text-gray-500">Course</p>
                        <p class="font-medium text-gray-900">@Model.SessionInfo.CourseName</p>
                    </div>
                </div>

                <!-- Section -->
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    <div>
                        <p class="text-sm text-gray-500">Section</p>
                        <p class="font-medium text-gray-900">@Model.SessionInfo.SectionName</p>
                    </div>
                </div>

                <!-- Date & Time -->
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <div>
                        <p class="text-sm text-gray-500">Scheduled Time</p>
                        <p class="font-medium text-gray-900">@Model.SessionInfo.StartDateTime.ToString("dddd, MMMM dd, yyyy")</p>
                        <p class="text-gray-600">@Model.SessionInfo.StartDateTime.ToString("hh:mm tt") - @Model.SessionInfo.EndDateTime.ToString("hh:mm tt")</p>
                        <p class="text-sm text-gray-500">Duration: @((Model.SessionInfo.EndDateTime - Model.SessionInfo.StartDateTime).TotalMinutes) minutes</p>
                    </div>
                </div>

                <!-- Description -->
                @if (!string.IsNullOrWhiteSpace(Model.SessionInfo.Description))
                {
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                        <div>
                            <p class="text-sm text-gray-500">Description</p>
                            <p class="text-gray-900">@Model.SessionInfo.Description</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Actions -->
        <div class="bg-gray-50 px-6 py-4 border-t border-gray-200">
            <form method="post" class="flex items-center justify-end gap-3">
                <a asp-page="./Index" class="px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition">
                    Cancel
                </a>
                <button type="submit" class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg shadow-lg transition flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Delete Session
                </button>
            </form>
        </div>
    </div>

    <!-- Info Box -->
    <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
        <div class="flex items-start">
            <svg class="w-5 h-5 text-blue-500 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
            <div class="text-blue-800">
                <p class="font-medium">Note:</p>
                <p class="text-sm">Students who have been notified about this session will no longer see it in their schedule.</p>
            </div>
        </div>
    </div>
</div>
