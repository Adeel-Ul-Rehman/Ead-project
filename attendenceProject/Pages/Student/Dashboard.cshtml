@page
@model attendenceProject.Pages.Student.DashboardModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<!-- Header Section -->
<div class="mb-6">
    <div class="bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 rounded-xl shadow-lg p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold flex items-center gap-3">
                    <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                    <span>Welcome, @Model.StudentName!</span>
                </h1>
                <p class="text-white text-opacity-90 mt-2">Track your attendance, courses, and academic performance</p>
            </div>
            <div class="hidden md:block">
                <div class="text-right">
                    <p class="text-sm text-white text-opacity-75">Today</p>
                    <p class="text-lg font-semibold">@DateTime.Now.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Low Attendance Alert -->
@if (Model.AttendancePercentage < 75)
{
    <div class="mb-6 bg-red-50 dark:bg-red-900 border-l-4 border-red-500 rounded-lg p-4 shadow-md">
        <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-red-600 dark:text-red-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div>
                <h3 class="font-bold text-red-800 dark:text-red-300">Low Attendance Warning!</h3>
                <p class="text-sm text-red-700 dark:text-red-400 mt-1">Your attendance is below 75%. Current: @Model.AttendancePercentage%. You need to attend more classes to meet the minimum requirement.</p>
            </div>
        </div>
    </div>
}

<!-- Student Info Card -->
<div class="mb-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6">
    <div class="grid grid-cols-2 sm:grid-cols-5 gap-4">
        <div class="text-center p-3 bg-blue-50 dark:bg-blue-900 rounded-lg">
            <p class="text-blue-600 dark:text-blue-300 text-sm font-medium uppercase tracking-wide">Roll Number</p>
            <p class="text-2xl font-bold text-gray-800 dark:text-white mt-1">@Model.RollNo</p>
        </div>
        <div class="text-center p-3 bg-indigo-50 dark:bg-indigo-900 rounded-lg">
            <p class="text-indigo-600 dark:text-indigo-300 text-sm font-medium uppercase tracking-wide">Section</p>
            <p class="text-2xl font-bold text-gray-800 dark:text-white mt-1">@Model.SectionName</p>
        </div>
        <div class="text-center p-3 bg-purple-50 dark:bg-purple-900 rounded-lg">
            <p class="text-purple-600 dark:text-purple-300 text-sm font-medium uppercase tracking-wide">Badge</p>
            <p class="text-2xl font-bold text-gray-800 dark:text-white mt-1">@Model.BadgeName</p>
        </div>
        <div class="text-center p-3 bg-pink-50 dark:bg-pink-900 rounded-lg">
            <p class="text-pink-600 dark:text-pink-300 text-sm font-medium uppercase tracking-wide">Semester</p>
            <p class="text-2xl font-bold text-gray-800 dark:text-white mt-1">@Model.Semester</p>
        </div>
        <div class="text-center p-3 @(Model.AttendancePercentage >= 75 ? "bg-green-50 dark:bg-green-900" : "bg-red-50 dark:bg-red-900") rounded-lg">
            <p class="@(Model.AttendancePercentage >= 75 ? "text-green-600 dark:text-green-300" : "text-red-600 dark:text-red-300") text-sm font-medium uppercase tracking-wide">Attendance</p>
            <p class="text-2xl font-bold text-gray-800 dark:text-white mt-1">@Model.AttendancePercentage%</p>
        </div>
    </div>
</div>

<!-- Special Sessions Alert -->
@if (Model.SpecialSessions.Any())
{
    <div class="mb-6">
        <div class="bg-gradient-to-r from-orange-500 to-red-500 rounded-xl shadow-lg p-6 text-white animate-pulse">
            <div class="flex items-center gap-3 mb-4">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                <h2 class="text-2xl font-bold">⚠️ Special Sessions</h2>
            </div>
            <div class="space-y-3">
                @foreach (var session in Model.SpecialSessions)
                {
                    <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-lg p-4">
                        <div class="flex justify-between items-start">
                            <div>
                                <span class="inline-block px-3 py-1 bg-orange-600 text-white text-xs font-bold rounded-full mb-2">@session.LectureType.ToUpper()</span>
                                <h3 class="text-xl font-bold">@session.TimetableRule.TeacherCourse.Course.Title</h3>
                                <p class="text-white text-opacity-90 mt-1">@session.TimetableRule.TeacherCourse.Course.Code | Room: @session.TimetableRule.Room</p>
                                @if (!string.IsNullOrEmpty(session.Description))
                                {
                                    <p class="text-sm text-white text-opacity-80 mt-2">📝 @session.Description</p>
                                }
                            </div>
                            <div class="text-right">
                                <p class="text-lg font-bold">@session.StartDateTime.ToString("hh:mm tt")</p>
                                <p class="text-sm text-white text-opacity-90">@session.StartDateTime.ToString("MMM dd")</p>
                                <span class="inline-block mt-2 px-2 py-1 bg-white text-orange-600 text-xs font-bold rounded">@session.Status</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Today's Schedule -->
    <div class="lg:col-span-2">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg">
            <div class="bg-gradient-to-r from-yellow-500 to-orange-500 text-white px-6 py-4 rounded-t-lg">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <h2 class="text-xl font-bold">My Schedule</h2>
                    </div>
                    <div class="flex gap-2">
                        <button onclick="filterSchedule('today')" id="btnToday" class="px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg font-semibold transition duration-300">Today</button>
                        <button onclick="filterSchedule('week')" id="btnWeek" class="px-4 py-2 bg-white bg-opacity-0 hover:bg-opacity-20 rounded-lg font-semibold transition duration-300">This Week</button>
                    </div>
                </div>
            </div>
            <div class="p-6">
                <div id="todaySchedule">
                    @if (Model.TodayLectures.Any())
                    {
                        <div class="space-y-3">
                            @foreach (var lecture in Model.TodayLectures)
                            {
                                <div class="border-l-4 border-blue-500 bg-gray-50 dark:bg-gray-700 rounded-r-lg p-4 hover:shadow-md transition duration-300">
                                    <div class="flex items-center justify-between">
                                        <div class="flex-1">
                                            <h3 class="font-bold text-gray-800 dark:text-white text-lg">@lecture.TimetableRule.TeacherCourse.Course.Title</h3>
                                            <div class="flex gap-4 mt-2 text-sm text-gray-600 dark:text-gray-300">
                                                <span class="flex items-center gap-1">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                                    </svg>
                                                    @lecture.TimetableRule.TeacherCourse.Teacher.User.FullName
                                                </span>
                                                <span class="flex items-center gap-1">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                                    </svg>
                                                    Room @lecture.TimetableRule.Room
                                                </span>
                                                <span class="flex items-center gap-1">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                    </svg>
                                                    @lecture.StartDateTime.ToString("hh:mm tt")
                                                </span>
                                            </div>
                                        </div>
                                        <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-xs font-semibold px-3 py-1 rounded-full">@lecture.TimetableRule.LectureType</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-12">
                            <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <p class="text-gray-500 dark:text-gray-400 text-lg">No lectures today. Enjoy your day off! 🎉</p>
                        </div>
                    }
                </div>
                <div id="weekSchedule" class="hidden">
                    @if (Model.WeekLectures.Any())
                    {
                        <div class="space-y-4">
                            @foreach (var dayGroup in Model.WeekLectures.GroupBy(l => l.StartDateTime.DayOfWeek).OrderBy(g => g.Key))
                            {
                                <div>
                                    <h3 class="font-bold text-gray-800 dark:text-white mb-3 flex items-center gap-2">
                                        <span class="inline-block w-2 h-2 bg-blue-500 rounded-full"></span>
                                        @dayGroup.Key.ToString()
                                    </h3>
                                    <div class="space-y-2 ml-4">
                                        @foreach (var lecture in dayGroup.OrderBy(l => l.StartDateTime))
                                        {
                                            <div class="border-l-4 border-indigo-500 bg-gray-50 dark:bg-gray-700 rounded-r-lg p-3">
                                                <div class="flex items-center justify-between">
                                                    <div class="flex-1">
                                                        <h4 class="font-semibold text-gray-800 dark:text-white">@lecture.TimetableRule.TeacherCourse.Course.Title</h4>
                                                        <div class="flex gap-3 mt-1 text-xs text-gray-600 dark:text-gray-400">
                                                            <span>@lecture.TimetableRule.TeacherCourse.Teacher.User.FullName</span>
                                                            <span>Room @lecture.TimetableRule.Room</span>
                                                            <span>@lecture.StartDateTime.ToString("hh:mm tt")</span>
                                                        </div>
                                                    </div>
                                                    <span class="bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200 text-xs font-semibold px-2 py-1 rounded-full">@lecture.TimetableRule.LectureType</span>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-12">
                            <p class="text-gray-500 dark:text-gray-400 text-lg">No lectures scheduled for this week.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Sidebar -->
    <div class="lg:col-span-1">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg">
            <div class="bg-gradient-to-r from-teal-600 to-cyan-600 text-white px-6 py-4 rounded-t-lg flex items-center gap-2">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                <h2 class="text-xl font-bold">Quick Actions</h2>
            </div>
            <div class="p-6 space-y-3">
                <a href="/Student/Timetable" class="block w-full bg-blue-50 dark:bg-blue-900 hover:bg-blue-100 dark:hover:bg-blue-800 text-blue-700 dark:text-blue-200 font-semibold py-3 px-4 rounded-lg transition duration-300 flex items-center gap-3">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    View Full Timetable
                </a>
                <a href="/Student/Attendance" class="block w-full bg-green-50 dark:bg-green-900 hover:bg-green-100 dark:hover:bg-green-800 text-green-700 dark:text-green-200 font-semibold py-3 px-4 rounded-lg transition duration-300 flex items-center gap-3">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                    View My Attendance
                </a>
                <a href="/Student/Courses" class="block w-full bg-indigo-50 dark:bg-indigo-900 hover:bg-indigo-100 dark:hover:bg-indigo-800 text-indigo-700 dark:text-indigo-200 font-semibold py-3 px-4 rounded-lg transition duration-300 flex items-center gap-3">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    My Courses
                </a>
                <a href="/Student/Holidays" class="block w-full bg-pink-50 dark:bg-pink-900 hover:bg-pink-100 dark:hover:bg-pink-800 text-pink-700 dark:text-pink-200 font-semibold py-3 px-4 rounded-lg transition duration-300 flex items-center gap-3">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    View Holidays
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    function filterSchedule(type) {
        const todayDiv = document.getElementById('todaySchedule');
        const weekDiv = document.getElementById('weekSchedule');
        const btnToday = document.getElementById('btnToday');
        const btnWeek = document.getElementById('btnWeek');
        
        if (type === 'today') {
            todayDiv.classList.remove('hidden');
            weekDiv.classList.add('hidden');
            btnToday.classList.add('bg-opacity-20');
            btnToday.classList.remove('bg-opacity-0');
            btnWeek.classList.add('bg-opacity-0');
            btnWeek.classList.remove('bg-opacity-20');
        } else {
            todayDiv.classList.add('hidden');
            weekDiv.classList.remove('hidden');
            btnWeek.classList.add('bg-opacity-20');
            btnWeek.classList.remove('bg-opacity-0');
            btnToday.classList.add('bg-opacity-0');
            btnToday.classList.remove('bg-opacity-20');
        }
    }
</script>

<!-- Course-wise Attendance -->
<div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow-lg">
    <div class="bg-gradient-to-r from-purple-600 to-pink-600 text-white px-6 py-4 rounded-t-lg flex items-center gap-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        <h2 class="text-xl font-bold">Course-wise Attendance</h2>
    </div>
    <div class="p-6">
        @if (Model.CourseAttendance.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                @foreach (var course in Model.CourseAttendance)
                {
                    <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-md transition duration-300">
                        <h4 class="font-bold text-gray-800 dark:text-white mb-1">@course.CourseName</h4>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mb-3">@course.CourseCode</p>
                        <div class="flex justify-between items-center text-sm mb-2">
                            <span class="text-gray-600 dark:text-gray-400">Present:</span>
                            <span class="font-semibold text-green-600 dark:text-green-400">@course.PresentCount/@course.TotalLectures</span>
                        </div>
                        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 mb-2">
                            <div class="@(course.Percentage >= 75 ? "bg-green-500" : course.Percentage >= 60 ? "bg-yellow-500" : "bg-red-500") h-3 rounded-full" style="width:@course.Percentage%"></div>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-xs text-gray-500 dark:text-gray-400">Attendance</span>
                            <span class="font-bold @(course.Percentage >= 75 ? "text-green-600 dark:text-green-400" : course.Percentage >= 60 ? "text-yellow-600 dark:text-yellow-400" : "text-red-600 dark:text-red-400")">@course.Percentage%</span>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-center text-gray-500 dark:text-gray-400 py-8">No course data available yet.</p>
        }
    </div>
</div>