@page
@model attendenceProject.Pages.Student.CoursesModel
@{
    ViewData["Title"] = "My Courses";
}

<!-- Header Section -->
<div class="mb-6">
    <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-xl shadow-lg p-6 text-white">
        <h1 class="text-3xl font-bold flex items-center gap-3">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
            <span>My Courses</span>
        </h1>
        <p class="text-white text-opacity-90 mt-2">View all your enrolled courses and their attendance details</p>
    </div>
</div>

<!-- Courses Grid -->
@if (Model.Courses.Any())
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var course in Model.Courses)
        {
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition duration-300 transform hover:-translate-y-1">
                <!-- Course Header -->
                <div class="bg-gradient-to-r @course.GetGradientClass() p-6 text-white">
                    <h3 class="text-xl font-bold mb-2">@course.CourseName</h3>
                    <p class="text-sm opacity-90">@course.CourseCode</p>
                </div>

                <!-- Course Body -->
                <div class="p-6">
                    <!-- Teacher Info -->
                    <div class="mb-4 pb-4 border-b border-gray-200 dark:border-gray-700">
                        <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400 mb-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span class="font-medium text-gray-800 dark:text-gray-200">@course.TeacherName</span>
                        </div>
                        <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span>@course.WeeklyHours hours/week</span>
                        </div>
                    </div>

                    <!-- Attendance Stats -->
                    <div class="mb-4">
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Attendance Progress</span>
                            <span class="text-sm font-bold @(course.AttendancePercentage >= 75 ? "text-green-600" : course.AttendancePercentage >= 60 ? "text-yellow-600" : "text-red-600")">
                                @course.AttendancePercentage%
                            </span>
                        </div>
                        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3">
                            <div class="@(course.AttendancePercentage >= 75 ? "bg-green-500" : course.AttendancePercentage >= 60 ? "bg-yellow-500" : "bg-red-500") h-3 rounded-full transition-all duration-500" style="width:@course.AttendancePercentage%"></div>
                        </div>
                    </div>

                    <!-- Lecture Stats -->
                    <div class="grid grid-cols-3 gap-2 mb-4">
                        <div class="bg-blue-50 dark:bg-blue-900 rounded-lg p-3 text-center">
                            <p class="text-xs text-blue-600 dark:text-blue-300 font-medium">Total</p>
                            <p class="text-lg font-bold text-gray-800 dark:text-white">@course.TotalLectures</p>
                        </div>
                        <div class="bg-green-50 dark:bg-green-900 rounded-lg p-3 text-center">
                            <p class="text-xs text-green-600 dark:text-green-300 font-medium">Present</p>
                            <p class="text-lg font-bold text-gray-800 dark:text-white">@course.PresentCount</p>
                        </div>
                        <div class="bg-red-50 dark:bg-red-900 rounded-lg p-3 text-center">
                            <p class="text-xs text-red-600 dark:text-red-300 font-medium">Absent</p>
                            <p class="text-lg font-bold text-gray-800 dark:text-white">@course.AbsentCount</p>
                        </div>
                    </div>

                    <!-- Status Badge -->
                    @if (course.AttendancePercentage >= 75)
                    {
                        <div class="bg-green-100 dark:bg-green-900 border-l-4 border-green-500 p-3 rounded">
                            <p class="text-xs font-semibold text-green-800 dark:text-green-200">✓ Good Standing</p>
                        </div>
                    }
                    else if (course.AttendancePercentage >= 60)
                    {
                        <div class="bg-yellow-100 dark:bg-yellow-900 border-l-4 border-yellow-500 p-3 rounded">
                            <p class="text-xs font-semibold text-yellow-800 dark:text-yellow-200">⚠ Needs Improvement</p>
                        </div>
                    }
                    else
                    {
                        <div class="bg-red-100 dark:bg-red-900 border-l-4 border-red-500 p-3 rounded">
                            <p class="text-xs font-semibold text-red-800 dark:text-red-200">✗ Critical - Action Needed</p>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-12 text-center">
        <svg class="w-20 h-20 mx-auto text-gray-300 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        <p class="text-gray-500 dark:text-gray-400 text-lg">No courses enrolled yet.</p>
    </div>
}

<!-- Overall Performance Summary -->
<div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        Overall Performance
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg p-4 text-white">
            <p class="text-sm font-medium text-blue-100">Total Courses</p>
            <p class="text-3xl font-bold mt-1">@Model.Courses.Count</p>
        </div>
        <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg p-4 text-white">
            <p class="text-sm font-medium text-green-100">Courses Above 75%</p>
            <p class="text-3xl font-bold mt-1">@Model.Courses.Count(c => c.AttendancePercentage >= 75)</p>
        </div>
        <div class="bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-lg p-4 text-white">
            <p class="text-sm font-medium text-yellow-100">Need Improvement</p>
            <p class="text-3xl font-bold mt-1">@Model.Courses.Count(c => c.AttendancePercentage >= 60 && c.AttendancePercentage < 75)</p>
        </div>
        <div class="bg-gradient-to-br from-red-500 to-red-600 rounded-lg p-4 text-white">
            <p class="text-sm font-medium text-red-100">Critical</p>
            <p class="text-3xl font-bold mt-1">@Model.Courses.Count(c => c.AttendancePercentage < 60)</p>
        </div>
    </div>
</div>
