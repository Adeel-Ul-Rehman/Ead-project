@page
@model attendenceProject.Pages.Student.HolidaysModel
@{
    ViewData["Title"] = "Holidays";
}

<!-- Header -->
<div class="mb-6">
    <div class="bg-gradient-to-r from-pink-600 via-rose-600 to-red-600 rounded-xl shadow-lg p-6 text-white">
        <h1 class="text-3xl font-bold flex items-center gap-3">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Holidays & Breaks</span>
        </h1>
        <p class="text-white text-opacity-90 mt-2">View academic calendar and scheduled holidays</p>
    </div>
</div>

<!-- Upcoming Holidays -->
@if (Model.UpcomingHolidays.Any())
{
    <div class="mb-8 bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-green-600 to-teal-600 text-white px-6 py-4 flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h2 class="text-xl font-bold">Upcoming Holidays</h2>
        </div>
        <div class="p-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            @foreach (var holiday in Model.UpcomingHolidays)
            {
                <div class="border-l-4 @(holiday.DaysUntil <= 7 ? "border-green-500 bg-green-50 dark:bg-green-900" : "border-blue-500 bg-blue-50 dark:bg-blue-900") rounded-r-lg p-4 hover:shadow-md transition duration-300">
                    <div class="flex justify-between items-start mb-2">
                        <h3 class="font-bold text-gray-800 dark:text-white">@holiday.Name</h3>
                        @if (holiday.DaysUntil <= 7)
                        {
                            <span class="px-2 py-1 bg-green-500 text-white text-xs font-bold rounded-full">Soon!</span>
                        }
                    </div>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">@holiday.StartDate.ToString("MMM dd, yyyy") - @holiday.EndDate.ToString("MMM dd, yyyy")</p>
                    <p class="text-xs text-gray-500 dark:text-gray-500">In @holiday.DaysUntil day(s)</p>
                    @if (!string.IsNullOrEmpty(holiday.Description))
                    {
                        <p class="text-sm text-gray-700 dark:text-gray-300 mt-2 italic">@holiday.Description</p>
                    }
                </div>
            }
        </div>
    </div>
}

<!-- All Holidays -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
    <div class="bg-gradient-to-r from-purple-600 to-pink-600 text-white px-6 py-4 flex items-center gap-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        <h2 class="text-xl font-bold">All Holidays (Academic Year)</h2>
    </div>
    
    @if (Model.AllHolidays.Any())
    {
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-100 dark:bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider">Holiday Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider">Start Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider">End Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider">Duration</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 dark:text-gray-300 uppercase tracking-wider">Description</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    @foreach (var holiday in Model.AllHolidays)
                    {
                        var isPast = holiday.Date < DateTime.Today;
                        var isOngoing = holiday.Date == DateTime.Today;
                        <tr class="@(isPast ? "opacity-50" : "") @(isOngoing ? "bg-green-50 dark:bg-green-900" : "hover:bg-gray-50 dark:hover:bg-gray-700") transition duration-150">
                            <td class="px-6 py-4 text-sm font-medium text-gray-900 dark:text-gray-100">
                                @holiday.Reason
                                @if (isOngoing)
                                {
                                    <span class="ml-2 px-2 py-1 bg-green-500 text-white text-xs font-bold rounded-full">Today</span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
                                @holiday.Date.ToString("MMM dd, yyyy")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
                                @holiday.Date.ToString("MMM dd, yyyy")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
                                1 day
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">
                                @holiday.Reason
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="p-12 text-center">
            <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <p class="text-gray-500 dark:text-gray-400 text-lg">No holidays scheduled for this academic year.</p>
        </div>
    }
</div>
