@page
@model attendenceProject.Pages.Student.TimetableModel
@{
    ViewData["Title"] = "My Timetable";
}

<!-- Header -->
<div class="mb-6">
    <div class="bg-gradient-to-r from-blue-600 via-cyan-600 to-teal-600 rounded-xl shadow-lg p-6 text-white">
        <h1 class="text-3xl font-bold flex items-center gap-3">
            <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span>My Timetable</span>
        </h1>
        <p class="text-white text-opacity-90 mt-2">Weekly class schedule and lecture times</p>
    </div>
</div>

<!-- Timetable Grid -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
    <div class="bg-gradient-to-r from-gray-700 to-gray-800 text-white px-6 py-4">
        <h2 class="text-xl font-bold">Weekly Schedule</h2>
    </div>
    
    <div class="p-6 overflow-x-auto">
        <table class="w-full border-collapse">
            <thead>
                <tr class="bg-gray-100 dark:bg-gray-700">
                    <th class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-left text-sm font-semibold text-gray-700 dark:text-gray-300 w-32">Time</th>
                    @foreach (var day in Model.Days)
                    {
                        <th class="border border-gray-300 dark:border-gray-600 px-4 py-3 text-center text-sm font-semibold text-gray-700 dark:text-gray-300">@day</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var timeSlot in Model.TimeSlots)
                {
                    <tr>
                        <td class="border border-gray-300 dark:border-gray-600 px-4 py-3 bg-gray-50 dark:bg-gray-700 font-medium text-sm text-gray-700 dark:text-gray-300">
                            @timeSlot
                        </td>
                        @foreach (var day in Model.Days)
                        {
                            var lecture = Model.GetLectureForSlot(day, timeSlot);
                            <td class="border border-gray-300 dark:border-gray-600 px-2 py-2 text-sm">
                                @if (lecture != null)
                                {
                                    <div class="bg-gradient-to-br @lecture.GradientClass rounded-lg p-3 text-white shadow-md hover:shadow-lg transition duration-300">
                                        <p class="font-bold text-sm">@lecture.CourseName</p>
                                        <p class="text-xs opacity-90 mt-1">@lecture.CourseCode</p>
                                        <p class="text-xs opacity-90 mt-1">Room: @lecture.Room</p>
                                        <p class="text-xs opacity-90 mt-1">@lecture.TeacherName</p>
                                    </div>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Legend -->
<div class="mt-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6">
    <h3 class="text-lg font-bold text-gray-800 dark:text-white mb-4">Legend</h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded"></div>
            <span class="text-sm text-gray-700 dark:text-gray-300">Theory Lectures</span>
        </div>
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-purple-600 rounded"></div>
            <span class="text-sm text-gray-700 dark:text-gray-300">Lab Sessions</span>
        </div>
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-gradient-to-br from-green-500 to-green-600 rounded"></div>
            <span class="text-sm text-gray-700 dark:text-gray-300">Practical</span>
        </div>
        <div class="flex items-center gap-2">
            <div class="w-8 h-8 bg-gradient-to-br from-orange-500 to-orange-600 rounded"></div>
            <span class="text-sm text-gray-700 dark:text-gray-300">Special</span>
        </div>
    </div>
</div>
