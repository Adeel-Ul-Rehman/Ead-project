@page
@model attendenceProject.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - University Attendance</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
            <div class="bg-gradient-to-r from-blue-600 to-indigo-600 p-8 text-white text-center">
                <h1 class="text-3xl font-bold mb-2">üîê Forgot Password</h1>
                <p class="text-blue-100">Reset your account password</p>
            </div>

            <div class="p-8">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded" role="alert">
                        <p class="font-medium">Error!</p>
                        <p>@Model.ErrorMessage</p>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="bg-green-50 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded" role="alert">
                        <p class="font-medium">Success!</p>
                        <p>@Model.SuccessMessage</p>
                    </div>
                }

                <form method="post" class="space-y-6">
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                        <input asp-for="Email" type="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition" placeholder="your.email@university.edu" required />
                        <p class="text-xs text-gray-500 mt-2">Enter your registered email address to receive an OTP code.</p>
                    </div>

                    <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 transform hover:scale-105">
                        Send OTP Code
                    </button>
                </form>

                <div class="mt-6 text-center">
                    <a href="/Account/Login" class="text-blue-600 hover:text-blue-800 text-sm font-medium">‚Üê Back to Login</a>
                </div>
            </div>
        </div>

        <p class="text-center text-gray-600 text-sm mt-6">
            &copy; 2025 University Attendance Management System
        </p>
    </div>
</body>
</html>
