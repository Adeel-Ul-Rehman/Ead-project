@page
@model attendenceProject.Pages.Account.VerifyOtpModel
@{
    ViewData["Title"] = "Verify OTP";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - University Attendance</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
            <div class="bg-gradient-to-r from-blue-600 to-indigo-600 p-8 text-white text-center">
                <h1 class="text-3xl font-bold mb-2">‚úâÔ∏è Verify OTP</h1>
                <p class="text-blue-100">Enter the code sent to your email</p>
            </div>

            <div class="p-8">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded" role="alert">
                        <p class="font-medium">Error!</p>
                        <p>@Model.ErrorMessage</p>
                    </div>
                }

                <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6 rounded">
                    <p class="text-sm text-blue-800">
                        üìß We've sent a 6-digit code to <strong>@Model.Email</strong>
                    </p>
                </div>

                <form method="post" class="space-y-6">
                    <input type="hidden" asp-for="Email" />
                    
                    <div>
                        <label asp-for="Otp" class="block text-sm font-medium text-gray-700 mb-2">Enter OTP Code</label>
                        <input asp-for="Otp" type="text" maxlength="6" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition text-center text-2xl tracking-widest font-mono" placeholder="000000" required />
                        <p class="text-xs text-gray-500 mt-2">Enter the 6-digit code sent to your email</p>
                    </div>

                    <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 transform hover:scale-105">
                        Verify OTP
                    </button>
                </form>

                <div class="mt-6 text-center space-y-2">
                    <a href="/Account/ForgotPassword" class="block text-blue-600 hover:text-blue-800 text-sm font-medium">‚Üê Resend OTP</a>
                    <a href="/Account/Login" class="block text-gray-600 hover:text-gray-800 text-sm">Back to Login</a>
                </div>
            </div>
        </div>

        <p class="text-center text-gray-600 text-sm mt-6">
            &copy; 2025 University Attendance Management System
        </p>
    </div>
</body>
</html>
