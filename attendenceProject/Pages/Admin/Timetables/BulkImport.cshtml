@page
@model attendenceProject.Pages.Admin.Timetables.BulkImportModel
@{
    ViewData["Title"] = "Bulk Import Timetable";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .animate-fade-in {
        animation: fadeIn 0.6s ease-out;
    }

    .animate-slide-in {
        animation: slideIn 0.5s ease-out;
    }

    .file-upload-area {
        transition: all 0.3s ease;
    }

    .file-upload-area:hover {
        border-color: #6366f1;
        background-color: rgba(99, 102, 241, 0.05);
    }

    .gradient-btn {
        transition: all 0.3s ease;
    }

    .gradient-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto">
        <!-- Modern Gradient Header -->
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl shadow-2xl p-8 mb-8 text-white animate-fade-in">
            <div class="flex items-center justify-between">
                <div>
                    <div class="flex items-center mb-2">
                        <span class="text-5xl mr-4">üì•</span>
                        <h1 class="text-4xl font-bold">Bulk Import Timetable</h1>
                    </div>
                    <p class="text-indigo-100 mt-2 text-lg">Import multiple timetable entries from CSV file</p>
                </div>
                <a asp-page="ViewTimetable" class="bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white font-semibold px-6 py-3 rounded-xl transition duration-300 flex items-center">
                    ‚Üê Back
                </a>
            </div>
        </div>

        <!-- Enhanced Instructions Card -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-gray-800 dark:to-gray-850 border-l-4 border-blue-500 rounded-2xl shadow-xl p-8 mb-8 animate-fade-in">
            <div class="flex items-center mb-6">
                <span class="text-3xl mr-3">üìã</span>
                <h2 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">How to Import</h2>
            </div>
            <ol class="space-y-4">
                <li class="flex items-start animate-slide-in" style="animation-delay: 0.1s;">
                    <span class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-blue-500 to-indigo-500 text-white rounded-full flex items-center justify-center font-bold mr-4">1</span>
                    <div>
                        <p class="text-gray-800 dark:text-gray-200 font-semibold">Download the CSV template</p>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Use the button below to get the properly formatted template</p>
                    </div>
                </li>
                <li class="flex items-start animate-slide-in" style="animation-delay: 0.2s;">
                    <span class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-blue-500 to-indigo-500 text-white rounded-full flex items-center justify-center font-bold mr-4">2</span>
                    <div>
                        <p class="text-gray-800 dark:text-gray-200 font-semibold">Fill in your timetable data</p>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Follow the template format and examples provided</p>
                    </div>
                </li>
                <li class="flex items-start animate-slide-in" style="animation-delay: 0.3s;">
                    <span class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-blue-500 to-indigo-500 text-white rounded-full flex items-center justify-center font-bold mr-4">3</span>
                    <div>
                        <p class="text-gray-800 dark:text-gray-200 font-semibold">Verify all references exist</p>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Ensure badges, sections, courses, and teachers are already in the system</p>
                    </div>
                </li>
                <li class="flex items-start animate-slide-in" style="animation-delay: 0.4s;">
                    <span class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-blue-500 to-indigo-500 text-white rounded-full flex items-center justify-center font-bold mr-4">4</span>
                    <div>
                        <p class="text-gray-800 dark:text-gray-200 font-semibold">Use correct formats</p>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Days: "Monday,Wednesday,Friday" | Time: "08:00, 14:30"</p>
                    </div>
                </li>
                <li class="flex items-start animate-slide-in" style="animation-delay: 0.5s;">
                    <span class="flex-shrink-0 w-8 h-8 bg-gradient-to-r from-blue-500 to-indigo-500 text-white rounded-full flex items-center justify-center font-bold mr-4">5</span>
                    <div>
                        <p class="text-gray-800 dark:text-gray-200 font-semibold">Upload and import</p>
                        <p class="text-gray-600 dark:text-gray-400 text-sm">Select your completed CSV file and click Import</p>
                    </div>
                </li>
            </ol>
        </div>

        <!-- Professional CSV Format Table -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8 mb-8 animate-fade-in">
            <div class="flex items-center mb-6">
                <span class="text-3xl mr-3">üìÑ</span>
                <h3 class="text-2xl font-bold bg-gradient-to-r from-green-600 to-teal-600 bg-clip-text text-transparent">CSV Format Reference</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full border-collapse">
                    <thead>
                        <tr class="bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-700 dark:to-gray-750">
                            <th class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Column</th>
                            <th class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Description</th>
                            <th class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Example</th>
                        </tr>
                    </thead>
                    <tbody class="text-sm">
                        <tr class="hover:bg-indigo-50 dark:hover:bg-gray-750 transition-colors duration-150">
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 font-mono font-bold text-indigo-600 dark:text-indigo-400">BadgeName</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-gray-700 dark:text-gray-300">Name of the badge (must exist)</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 bg-green-50 dark:bg-green-900/20 font-semibold text-green-700 dark:text-green-300">BSCS</td>
                        </tr>
                        <tr class="hover:bg-indigo-50 dark:hover:bg-gray-750 transition-colors duration-150">
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 font-mono font-bold text-indigo-600 dark:text-indigo-400">SectionName</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-gray-700 dark:text-gray-300">Section name</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 bg-green-50 dark:bg-green-900/20 font-semibold text-green-700 dark:text-green-300">A</td>
                        </tr>
                        <tr class="hover:bg-indigo-50 dark:hover:bg-gray-750 transition-colors duration-150">
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 font-mono font-bold text-indigo-600 dark:text-indigo-400">Session</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-gray-700 dark:text-gray-300">Academic session</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 bg-green-50 dark:bg-green-900/20 font-semibold text-green-700 dark:text-green-300">2023-2027</td>
                        </tr>
                        <tr class="hover:bg-indigo-50 dark:hover:bg-gray-750 transition-colors duration-150">
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 font-mono font-bold text-indigo-600 dark:text-indigo-400">CourseCode</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-gray-700 dark:text-gray-300">Course code (must exist)</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 bg-green-50 dark:bg-green-900/20 font-semibold text-green-700 dark:text-green-300">CS101</td>
                        </tr>
                        <tr class="hover:bg-indigo-50 dark:hover:bg-gray-750 transition-colors duration-150">
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 font-mono font-bold text-indigo-600 dark:text-indigo-400">TeacherEmail</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-gray-700 dark:text-gray-300">Teacher's email (must exist)</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 bg-green-50 dark:bg-green-900/20 font-semibold text-green-700 dark:text-green-300">teacher@example.com</td>
                        </tr>
                        <tr class="hover:bg-indigo-50 dark:hover:bg-gray-750 transition-colors duration-150">
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 font-mono font-bold text-indigo-600 dark:text-indigo-400">DaysOfWeek</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-gray-700 dark:text-gray-300">Comma-separated days</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 bg-green-50 dark:bg-green-900/20 font-semibold text-green-700 dark:text-green-300">Monday,Wednesday,Friday</td>
                        </tr>
                        <tr class="hover:bg-indigo-50 dark:hover:bg-gray-750 transition-colors duration-150">
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 font-mono font-bold text-indigo-600 dark:text-indigo-400">StartTime</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-gray-700 dark:text-gray-300">Start time (HH:mm format)</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 bg-green-50 dark:bg-green-900/20 font-semibold text-green-700 dark:text-green-300">08:00</td>
                        </tr>
                        <tr class="hover:bg-indigo-50 dark:hover:bg-gray-750 transition-colors duration-150">
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 font-mono font-bold text-indigo-600 dark:text-indigo-400">EndTime</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-gray-700 dark:text-gray-300">End time (HH:mm format)</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 bg-green-50 dark:bg-green-900/20 font-semibold text-green-700 dark:text-green-300">09:30</td>
                        </tr>
                        <tr class="hover:bg-indigo-50 dark:hover:bg-gray-750 transition-colors duration-150">
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 font-mono font-bold text-indigo-600 dark:text-indigo-400">RoomNumber</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 text-gray-700 dark:text-gray-300">Room/Location (optional)</td>
                            <td class="border-2 border-gray-300 dark:border-gray-600 px-6 py-4 bg-green-50 dark:bg-green-900/20 font-semibold text-green-700 dark:text-green-300">Room 101</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="mt-6">
                <a asp-page-handler="DownloadTemplate" class="gradient-btn bg-gradient-to-r from-green-500 to-emerald-600 hover:from-green-600 hover:to-emerald-700 text-white font-bold px-8 py-4 rounded-xl inline-flex items-center shadow-lg">
                    <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    Download CSV Template
                </a>
            </div>
        </div>

        <!-- Modern File Upload Section -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8 mb-8 animate-fade-in">
            <div class="flex items-center mb-6">
                <span class="text-3xl mr-3">üìÅ</span>
                <h3 class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">Upload CSV File</h3>
            </div>
            <form method="post" enctype="multipart/form-data">
                <div class="mb-6">
                    <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-3">Select Your CSV File</label>
                    <div class="file-upload-area border-3 border-dashed border-gray-300 dark:border-gray-600 rounded-xl p-8 text-center bg-gradient-to-br from-gray-50 to-indigo-50 dark:from-gray-750 dark:to-gray-800">
                        <div class="mb-4">
                            <svg class="mx-auto h-16 w-16 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                            </svg>
                        </div>
                        <input type="file" 
                               asp-for="CsvFile" 
                               accept=".csv" 
                               class="block w-full text-sm text-gray-600 dark:text-gray-400 
                                      file:mr-4 file:py-3 file:px-6 
                                      file:rounded-xl file:border-0 
                                      file:text-sm file:font-bold 
                                      file:bg-gradient-to-r file:from-indigo-500 file:to-purple-500 
                                      file:text-white 
                                      hover:file:from-indigo-600 hover:file:to-purple-600
                                      file:cursor-pointer file:transition file:duration-300
                                      file:shadow-lg hover:file:shadow-xl" 
                               required />
                        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">CSV files only ‚Ä¢ Maximum size: 5MB</p>
                    </div>
                    <span asp-validation-for="CsvFile" class="text-red-500 text-sm font-semibold mt-2 block"></span>
                </div>

                <button type="submit" class="gradient-btn w-full bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white font-bold px-8 py-4 rounded-xl shadow-lg flex items-center justify-center">
                    <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                    Import Timetable Data
                </button>
            </form>
        </div>

        <!-- Import Results with Enhanced Animations -->
        @if (Model.ShowResults && Model.Results.Any())
        {
            <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-8 mt-8 animate-fade-in">
                <div class="flex items-center mb-6">
                    <span class="text-3xl mr-3">üìä</span>
                    <h3 class="text-2xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">Import Results</h3>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div class="bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl p-6 text-white shadow-lg transform hover:scale-105 transition-transform duration-300">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-green-100 text-sm font-semibold mb-1">Successful Imports</p>
                                <p class="text-4xl font-bold">@Model.Results.Count(r => r.Success)</p>
                            </div>
                            <div class="bg-white/20 backdrop-blur-sm rounded-full p-4">
                                <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="bg-gradient-to-br from-red-500 to-pink-600 rounded-xl p-6 text-white shadow-lg transform hover:scale-105 transition-transform duration-300">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-red-100 text-sm font-semibold mb-1">Failed Imports</p>
                                <p class="text-4xl font-bold">@Model.Results.Count(r => !r.Success)</p>
                            </div>
                            <div class="bg-white/20 backdrop-blur-sm rounded-full p-4">
                                <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-700 dark:to-gray-750">
                            <tr>
                                <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Row</th>
                                <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Message</th>
                                <th class="px-6 py-4 text-left text-sm font-bold text-gray-700 dark:text-gray-300 uppercase tracking-wider">Details</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                            @foreach (var result in Model.Results)
                            {
                                <tr class="@(result.Success ? "bg-green-50 dark:bg-green-900/20 hover:bg-green-100 dark:hover:bg-green-900/30" : "bg-red-50 dark:bg-red-900/20 hover:bg-red-100 dark:hover:bg-red-900/30") transition-colors duration-150">
                                    <td class="px-6 py-4 text-sm font-bold text-gray-900 dark:text-white">
                                        <span class="bg-indigo-100 dark:bg-indigo-900 text-indigo-800 dark:text-indigo-200 px-3 py-1 rounded-full">
                                            #@result.Row
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-sm">
                                        @if (result.Success)
                                        {
                                            <span class="flex items-center text-green-700 dark:text-green-300 font-bold">
                                                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                                </svg>
                                                @result.Message
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="flex items-center text-red-700 dark:text-red-300 font-bold">
                                                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                                </svg>
                                                @result.Message
                                            </span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-sm text-gray-700 dark:text-gray-300 font-medium">@result.Details</td>
                                    <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
                                        @if (!result.Success)
                                        {
                                            <span class="text-xs bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 px-2 py-1 rounded">
                                                ‚ö†Ô∏è Check and retry
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-xs bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 px-2 py-1 rounded">
                                                ‚úì Imported
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.Results.Any(r => r.Success))
                {
                    <div class="mt-8 text-center">
                        <a asp-page="ViewTimetable" class="gradient-btn bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white font-bold px-8 py-4 rounded-xl inline-flex items-center shadow-lg">
                            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                            View Updated Timetable
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
