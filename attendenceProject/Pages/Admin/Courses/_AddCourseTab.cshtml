@model attendenceProject.Pages.Admin.Courses.IndexModel

<div class="max-w-2xl mx-auto">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
        <div class="flex items-center gap-3 mb-6">
            <div class="bg-green-100 dark:bg-green-900 p-3 rounded-full">
                <svg class="w-6 h-6 text-green-600 dark:text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Add New Course</h2>
        </div>

        <form method="post" asp-page-handler="AddCourse" class="space-y-6">
            <!-- Course Code -->
            <div>
                <label for="courseCode" class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2">
                    Course Code <span class="text-red-500">*</span>
                </label>
                <input type="text" asp-for="NewCourse.Code" id="courseCode" required
                       class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                       placeholder="e.g., CS101, MATH201">
                <span asp-validation-for="NewCourse.Code" class="text-red-500 text-sm mt-1"></span>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Unique identifier for the course</p>
            </div>

            <!-- Course Title -->
            <div>
                <label for="courseTitle" class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2">
                    Course Title <span class="text-red-500">*</span>
                </label>
                <input type="text" asp-for="NewCourse.Title" id="courseTitle" required
                       class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                       placeholder="e.g., Introduction to Programming">
                <span asp-validation-for="NewCourse.Title" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Credit Hours -->
            <div>
                <label for="creditHours" class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2">
                    Credit Hours <span class="text-red-500">*</span>
                </label>
                <select asp-for="NewCourse.CreditHours" id="creditHours" required
                        class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                    <option value="">Select Credit Hours</option>
                    @for (int i = 1; i <= 6; i++)
                    {
                        <option value="@i">@i Credit Hour@(i > 1 ? "s" : "")</option>
                    }
                </select>
                <span asp-validation-for="NewCourse.CreditHours" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Course Type -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-3">
                    Course Type <span class="text-red-500">*</span>
                </label>
                <div class="flex gap-6">
                    <label class="inline-flex items-center cursor-pointer group">
                        <input type="radio" asp-for="NewCourse.IsLab" value="false" checked
                               class="w-5 h-5 text-green-600 border-gray-300 focus:ring-green-500 dark:border-gray-600 dark:bg-gray-700">
                        <span class="ml-3 text-gray-700 dark:text-gray-200 group-hover:text-green-600 dark:group-hover:text-green-400 font-medium">
                            <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            Theory Course
                        </span>
                    </label>
                    <label class="inline-flex items-center cursor-pointer group">
                        <input type="radio" asp-for="NewCourse.IsLab" value="true"
                               class="w-5 h-5 text-cyan-600 border-gray-300 focus:ring-cyan-500 dark:border-gray-600 dark:bg-gray-700">
                        <span class="ml-3 text-gray-700 dark:text-gray-200 group-hover:text-cyan-600 dark:group-hover:text-cyan-400 font-medium">
                            <svg class="w-5 h-5 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            Lab Course
                        </span>
                    </label>
                </div>
            </div>

            <!-- Buttons -->
            <div class="flex items-center gap-4 pt-6 border-t border-gray-200 dark:border-gray-700">
                <button type="submit"
                        class="flex-1 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white font-semibold px-6 py-3 rounded-lg transition duration-200 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Add Course
                </button>
                <a href="?tab=all"
                   class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-3 rounded-lg transition duration-200 flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Cancel
                </a>
            </div>
        </form>
    </div>

    <!-- Info Card -->
    <div class="mt-6 bg-blue-50 dark:bg-blue-900/30 border-l-4 border-blue-500 p-4 rounded-r-lg">
        <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-blue-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
                <h4 class="text-sm font-semibold text-blue-900 dark:text-blue-200 mb-1">Course Guidelines</h4>
                <ul class="text-sm text-blue-800 dark:text-blue-300 space-y-1 list-disc list-inside">
                    <li>Course codes must be unique</li>
                    <li>Credit hours range: 1-6</li>
                    <li>Theory courses typically have 3-4 credit hours</li>
                    <li>Lab courses typically have 1 credit hour</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
