@page
@model attendenceProject.Pages.Admin.Courses.EditModel
@{
    ViewData["Title"] = "Edit Course";
}

<!-- Header Section -->
<div class="mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-800 dark:text-white flex items-center gap-2 sm:gap-3">
        <span class="text-3xl sm:text-4xl md:text-5xl">✏️</span>
        <span>Edit Course</span>
    </h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2 text-base sm:text-lg">Update course information</p>
</div>

<!-- Form Card -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 sm:p-6 md:p-8 max-w-3xl">
    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Input.Id" />
        
        <div class="space-y-6">
            <!-- Course Code -->
            <div>
                <label asp-for="Input.Code" class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2">
                    Course Code <span class="text-red-500">*</span>
                </label>
                <input asp-for="Input.Code" type="text" required
                       class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white transition duration-200">
                <span asp-validation-for="Input.Code" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Course Title -->
            <div>
                <label asp-for="Input.Title" class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2">
                    Course Title <span class="text-red-500">*</span>
                </label>
                <input asp-for="Input.Title" type="text" required
                       class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white transition duration-200">
                <span asp-validation-for="Input.Title" class="text-red-500 text-sm mt-1"></span>
            </div>

            <!-- Course Type and Credits Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                <!-- Course Type -->
                <div>
                    <label asp-for="Input.IsLab" class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2">
                        Course Type <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="Input.IsLab" required
                            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white transition duration-200">
                        <option value="false">Theory</option>
                        <option value="true">Lab</option>
                    </select>
                    <span asp-validation-for="Input.IsLab" class="text-red-500 text-sm mt-1"></span>
                </div>

                <!-- Credit Hours -->
                <div>
                    <label asp-for="Input.CreditHours" class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2">
                        Credit Hours <span class="text-red-500">*</span>
                    </label>
                    <select asp-for="Input.CreditHours" required
                            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white transition duration-200">
                        @for (int i = 1; i <= 6; i++)
                        {
                            <option value="@i">@i Credit@(i > 1 ? "s" : "")</option>
                        }
                    </select>
                    <span asp-validation-for="Input.CreditHours" class="text-red-500 text-sm mt-1"></span>
                </div>
            </div>

            <!-- Info Box -->
            @if (Model.AssignmentCount > 0)
            {
                <div class="bg-yellow-50 dark:bg-yellow-900 border-l-4 border-yellow-500 p-4 rounded-lg">
                    <div class="flex items-start">
                        <svg class="w-6 h-6 text-yellow-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                        <div>
                            <h4 class="text-sm font-bold text-yellow-800 dark:text-yellow-200 mb-1">Warning</h4>
                            <p class="text-sm text-yellow-700 dark:text-yellow-300">
                                This course has <strong>@Model.AssignmentCount teacher assignment(s)</strong>. 
                                Changes may affect lectures and attendance records.
                            </p>
                        </div>
                    </div>
                </div>
            }

            <!-- Validation Summary -->
            <div asp-validation-summary="All" class="text-red-500 text-sm bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 rounded-lg p-3"></div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 pt-4">
                <button type="submit" class="flex-1 bg-gradient-to-r from-yellow-500 to-orange-600 hover:from-yellow-600 hover:to-orange-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300 flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Update Course
                </button>
                <a href="/Admin/Courses" class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition duration-300 flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
