@page
@model attendenceProject.Pages.Admin.Holidays.IndexModel
@{
    ViewData["Title"] = "Holidays";
}

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-50 dark:bg-green-900 border-l-4 border-green-500 p-4 mb-6 rounded-lg shadow-md">
        <div class="flex items-center">
            <svg class="w-6 h-6 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-green-700 dark:text-green-200 font-medium">@TempData["SuccessMessage"]</p>
        </div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-50 dark:bg-red-900 border-l-4 border-red-500 p-4 mb-6 rounded-lg shadow-md">
        <div class="flex items-center">
            <svg class="w-6 h-6 text-red-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-red-700 dark:text-red-200 font-medium">@TempData["ErrorMessage"]</p>
        </div>
    </div>
}

<!-- Header Section -->
<div class="mb-6 sm:mb-8 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
        <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-800 dark:text-white flex items-center gap-2 sm:gap-3">
            <span class="text-3xl sm:text-4xl md:text-5xl">üèñÔ∏è</span>
            <span>Holidays</span>
        </h1>
        <p class="text-gray-600 dark:text-gray-400 mt-2 text-base sm:text-lg">Manage academic holidays and non-teaching days</p>
    </div>
    <a href="/Admin/Holidays/Create" class="w-full sm:w-auto bg-gradient-to-r from-green-500 to-teal-600 hover:from-green-600 hover:to-teal-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300 flex items-center justify-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        New Holiday
    </a>
</div>

<!-- Stats Card -->
<div class="bg-gradient-to-br from-purple-500 to-pink-600 rounded-lg shadow-lg p-4 sm:p-6 mb-6 text-white">
    <div class="flex items-center justify-between">
        <div>
            <p class="text-purple-100 text-sm mb-1">Total Holidays</p>
            <p class="text-3xl sm:text-4xl font-bold">@Model.TotalHolidays</p>
        </div>
        <svg class="w-12 h-12 sm:w-16 sm:h-16 text-purple-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10m7 8H3V7a2 2 0 012-2h14a2 2 0 012 2v12a2 2 0 01-2 2H5a2 2 0 01-2-2V7z"></path>
        </svg>
    </div>
</div>

<!-- Holidays Table -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gradient-to-r from-purple-500 to-pink-600 text-white">
                <tr>
                    <th class="px-4 py-3 text-left text-sm font-bold">Date</th>
                    <th class="px-4 py-3 text-left text-sm font-bold">Reason</th>
                    <th class="px-4 py-3 text-left text-sm font-bold hidden sm:table-cell">Added</th>
                    <th class="px-4 py-3 text-center text-sm font-bold">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                @if (Model.Holidays.Any())
                {
                    @foreach (var holiday in Model.Holidays)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition duration-200">
                            <td class="px-4 py-3">
                                <div class="text-sm font-semibold text-gray-900 dark:text-white">@holiday.Date.ToString("dddd, MMM dd, yyyy")</div>
                            </td>
                            <td class="px-4 py-3">
                                <div class="text-sm text-gray-600 dark:text-gray-400">@holiday.Reason</div>
                            </td>
                            <td class="px-4 py-3 hidden sm:table-cell">
                                <div class="text-xs text-gray-500 dark:text-gray-400">@holiday.CreatedAt.ToString("MMM dd, yyyy")</div>
                            </td>
                            <td class="px-4 py-3">
                                <div class="flex items-center justify-center gap-2">
                                    <a href="/Admin/Holidays/Edit?id=@holiday.Id" class="text-yellow-600 hover:text-yellow-800 dark:text-yellow-400 dark:hover:text-yellow-300 transition duration-200" title="Edit">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </a>
                                    <button type="button" data-id="@holiday.Id" data-name="@holiday.Date.ToString("MMM dd, yyyy") - @holiday.Reason" onclick="openDeleteModal(this.getAttribute('data-id'), this.getAttribute('data-name'))" class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300 transition duration-200" title="Delete">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="px-4 py-8 text-center">
                            <div class="flex flex-col items-center justify-center text-gray-500 dark:text-gray-400">
                                <svg class="w-16 h-16 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                                </svg>
                                <p class="text-lg font-medium">No holidays found</p>
                                <p class="text-sm mt-1">Add holidays to mark non-teaching days</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.Holidays.Any())
    {
        <div class="bg-gray-50 dark:bg-gray-700 px-4 py-3 border-t border-gray-200 dark:border-gray-600">
            <p class="text-sm text-gray-600 dark:text-gray-300">
                Showing <strong>@Model.Holidays.Count()</strong> holiday(s)
            </p>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50" onclick="closeDeleteModal(event)">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl p-6 max-w-md w-full mx-4" onclick="event.stopPropagation()">
        <div class="flex items-start mb-4">
            <div class="flex-shrink-0">
                <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            <div class="ml-4 flex-1">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Delete Holiday</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300 mb-2">
                    Are you sure you want to delete: <strong id="deleteItemName" class="text-gray-900 dark:text-white"></strong>?
                </p>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
                    This action cannot be undone.
                </p>
            </div>
        </div>
        <div class="flex justify-end gap-3 mt-6">
            <button onclick="closeDeleteModal(event)" class="px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg transition duration-200">
                Cancel
            </button>
            <form id="deleteForm" method="post" asp-page-handler="Delete" class="inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="deleteId" value="" />
                <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition duration-200">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    function openDeleteModal(id, name) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteItemName').textContent = name;
        document.getElementById('deleteModal').classList.remove('hidden');
        document.getElementById('deleteModal').classList.add('flex');
    }

    function closeDeleteModal(event) {
        if (event) event.preventDefault();
        document.getElementById('deleteModal').classList.add('hidden');
        document.getElementById('deleteModal').classList.remove('flex');
    }
</script>
