@page
@model attendenceProject.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Welcome Section -->
<div class="mb-6 sm:mb-8">
    <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-800 dark:text-white">
        Welcome, Administrator! 👋
    </h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2 text-lg">
        @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
    </p>
</div>

<!-- System Stats Overview -->
<div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 mb-8">
    <!-- Total Users Card -->
    <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl shadow-lg p-6 text-white transform hover:scale-105 transition duration-300">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-blue-100 text-sm font-medium uppercase tracking-wide">Total Users</p>
                <p class="text-4xl font-bold mt-2">@Model.TotalUsers</p>
            </div>
            <div class="bg-white bg-opacity-20 rounded-full p-4">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
            </div>
        </div>
    </div>

    <!-- Total Students Card -->
    <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-xl shadow-lg p-6 text-white transform hover:scale-105 transition duration-300">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-green-100 text-sm font-medium uppercase tracking-wide">Total Students</p>
                <p class="text-4xl font-bold mt-2">@Model.TotalStudents</p>
            </div>
            <div class="bg-white bg-opacity-20 rounded-full p-4">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                </svg>
            </div>
        </div>
    </div>

    <!-- Total Teachers Card -->
    <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl shadow-lg p-6 text-white transform hover:scale-105 transition duration-300">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-purple-100 text-sm font-medium uppercase tracking-wide">Total Teachers</p>
                <p class="text-4xl font-bold mt-2">@Model.TotalTeachers</p>
            </div>
            <div class="bg-white bg-opacity-20 rounded-full p-4">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
            </div>
        </div>
    </div>

    <!-- Total Courses Card -->
    <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl shadow-lg p-6 text-white transform hover:scale-105 transition duration-300">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-orange-100 text-sm font-medium uppercase tracking-wide">Total Courses</p>
                <p class="text-4xl font-bold mt-2">@Model.TotalCourses</p>
            </div>
            <div class="bg-white bg-opacity-20 rounded-full p-4">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- Secondary Stats -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Sections -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 border-l-4 border-indigo-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Sections</p>
                <p class="text-3xl font-bold text-gray-800 dark:text-white mt-1">@Model.TotalSections</p>
            </div>
            <span class="text-4xl">📚</span>
        </div>
    </div>

    <!-- Badges -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 border-l-4 border-pink-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Badges</p>
                <p class="text-3xl font-bold text-gray-800 dark:text-white mt-1">@Model.TotalBadges</p>
            </div>
            <span class="text-4xl">🎖️</span>
        </div>
    </div>

    <!-- Total Lectures -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 border-l-4 border-teal-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Total Lectures</p>
                <p class="text-3xl font-bold text-gray-800 dark:text-white mt-1">@Model.TotalLectures</p>
            </div>
            <span class="text-4xl">📅</span>
        </div>
    </div>

    <!-- Today's Lectures -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 border-l-4 border-yellow-500">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Today's Lectures</p>
                <p class="text-3xl font-bold text-gray-800 dark:text-white mt-1">@Model.TodayLectures</p>
            </div>
            <span class="text-4xl">⏰</span>
        </div>
    </div>
</div>

<!-- Quick Actions Section -->
<div class="mb-8">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
        <span class="text-3xl">⚡</span>
        Quick Actions
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <!-- Manage Users -->
        <a href="/Admin/Users" class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-xl p-6 transition duration-300 border-2 border-transparent hover:border-blue-500">
            <div class="flex items-center gap-4">
                <div class="bg-blue-100 dark:bg-blue-900 rounded-full p-3">
                    <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 dark:text-white">Manage Users</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Add or edit users</p>
                </div>
            </div>
        </a>

        <!-- Manage Badges -->
        <a href="/Admin/Badges" class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-xl p-6 transition duration-300 border-2 border-transparent hover:border-pink-500">
            <div class="flex items-center gap-4">
                <div class="bg-pink-100 dark:bg-pink-900 rounded-full p-3">
                    <svg class="w-6 h-6 text-pink-600 dark:text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 dark:text-white">Manage Badges</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Departments & Programs</p>
                </div>
            </div>
        </a>

        <!-- Manage Sections -->
        <a href="/Admin/Sections" class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-xl p-6 transition duration-300 border-2 border-transparent hover:border-indigo-500">
            <div class="flex items-center gap-4">
                <div class="bg-indigo-100 dark:bg-indigo-900 rounded-full p-3">
                    <svg class="w-6 h-6 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 dark:text-white">Manage Sections</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Classes & Groups</p>
                </div>
            </div>
        </a>

        <!-- Manage Courses -->
        <a href="/Admin/Courses" class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-xl p-6 transition duration-300 border-2 border-transparent hover:border-green-500">
            <div class="flex items-center gap-4">
                <div class="bg-green-100 dark:bg-green-900 rounded-full p-3">
                    <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 dark:text-white">Manage Courses</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Add or edit courses</p>
                </div>
            </div>
        </a>

        <!-- Assign Courses -->
        <a href="/Admin/TeacherCourses" class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-xl p-6 transition duration-300 border-2 border-transparent hover:border-teal-500">
            <div class="flex items-center gap-4">
                <div class="bg-teal-100 dark:bg-teal-900 rounded-full p-3">
                    <svg class="w-6 h-6 text-teal-600 dark:text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 dark:text-white">Assign Courses</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Teacher assignments</p>
                </div>
            </div>
        </a>

        <!-- Timetable Management -->
        <a href="/Admin/TimetableRules" class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-xl p-6 transition duration-300 border-2 border-transparent hover:border-purple-500">
            <div class="flex items-center gap-4">
                <div class="bg-purple-100 dark:bg-purple-900 rounded-full p-3">
                    <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 dark:text-white">Timetable Rules</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Define class schedules</p>
                </div>
            </div>
        </a>

        <!-- Special Sessions -->
        <a href="/Admin/SpecialSessions" class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-xl p-6 transition duration-300 border-2 border-transparent hover:border-indigo-500">
            <div class="flex items-center gap-4">
                <div class="bg-indigo-100 dark:bg-indigo-900 rounded-full p-3">
                    <svg class="w-6 h-6 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 dark:text-white">Special Sessions</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Monitor teacher sessions</p>
                </div>
            </div>
        </a>

        <!-- Reports & Analytics -->
        <a href="/Admin/Reports" class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-xl p-6 transition duration-300 border-2 border-transparent hover:border-orange-500">
            <div class="flex items-center gap-4">
                <div class="bg-orange-100 dark:bg-orange-900 rounded-full p-3">
                    <svg class="w-6 h-6 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 dark:text-white">Reports & Analytics</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Attendance reports</p>
                </div>
            </div>
        </a>

        <!-- Attendance Requests -->
        <a href="/Admin/AttendanceEditRequests" class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-xl p-6 transition duration-300 border-2 border-transparent hover:border-purple-500 relative">
            @if ((Model.PendingExtensionRequests + Model.PendingEditRequests) > 0)
            {
                <div class="absolute -top-2 -right-2 bg-purple-500 text-white rounded-full w-8 h-8 flex items-center justify-center font-bold text-sm animate-pulse">
                    @(Model.PendingExtensionRequests + Model.PendingEditRequests)
                </div>
            }
            <div class="flex items-center gap-4">
                <div class="bg-purple-100 dark:bg-purple-900 rounded-full p-3">
                    <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 dark:text-white">Attendance Requests</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Edit & Extension requests</p>
                </div>
            </div>
        </a>

        <!-- Holidays -->
        <a href="/Admin/Holidays" class="bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-xl p-6 transition duration-300 border-2 border-transparent hover:border-cyan-500">
            <div class="flex items-center gap-4">
                <div class="bg-cyan-100 dark:bg-cyan-900 rounded-full p-3">
                    <svg class="w-6 h-6 text-cyan-600 dark:text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-gray-800 dark:text-white">Manage Holidays</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Academic calendar</p>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- System Overview -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 mb-8">
    <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4 flex items-center gap-2">
        <span class="text-3xl">📊</span>
        System Overview
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="text-center p-4">
            <div class="text-4xl mb-2">🎓</div>
            <div class="text-2xl font-bold text-gray-800 dark:text-white">@Model.TotalStudents</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">Active Students</div>
        </div>
        <div class="text-center p-4">
            <div class="text-4xl mb-2">👨‍🏫</div>
            <div class="text-2xl font-bold text-gray-800 dark:text-white">@Model.TotalTeachers</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">Active Teachers</div>
        </div>
        <div class="text-center p-4">
            <div class="text-4xl mb-2">📖</div>
            <div class="text-2xl font-bold text-gray-800 dark:text-white">@Model.TotalCourses</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">Available Courses</div>
        </div>
    </div>
</div>

<!-- Alert Cards -->
@if (Model.PendingEditRequests > 0 || Model.UnmarkedLectures > 0 || Model.TopPerformingTeachers > 0 || Model.LowPerformingCourses > 0)
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        @if (Model.PendingEditRequests > 0)
        {
            <div class="bg-yellow-50 dark:bg-yellow-900 border-l-4 border-yellow-500 p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="flex items-center gap-3">
                    <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                    <div>
                        <p class="font-bold text-2xl text-yellow-800 dark:text-yellow-200">@Model.PendingEditRequests</p>
                        <p class="text-sm text-yellow-700 dark:text-yellow-300">Pending Requests</p>
                    </div>
                </div>
            </div>
        }
        @if (Model.UnmarkedLectures > 0)
        {
            <div class="bg-red-50 dark:bg-red-900 border-l-4 border-red-500 p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="flex items-center gap-3">
                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                        <p class="font-bold text-2xl text-red-800 dark:text-red-200">@Model.UnmarkedLectures</p>
                        <p class="text-sm text-red-700 dark:text-red-300">Unmarked Lectures</p>
                    </div>
                </div>
            </div>
        }
        @if (Model.TopPerformingTeachers > 0)
        {
            <div class="bg-green-50 dark:bg-green-900 border-l-4 border-green-500 p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="flex items-center gap-3">
                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                        <p class="font-bold text-2xl text-green-800 dark:text-green-200">@Model.TopPerformingTeachers</p>
                        <p class="text-sm text-green-700 dark:text-green-300">Top Teachers (95%+)</p>
                    </div>
                </div>
            </div>
        }
        @if (Model.LowPerformingCourses > 0)
        {
            <div class="bg-orange-50 dark:bg-orange-900 border-l-4 border-orange-500 p-4 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <div class="flex items-center gap-3">
                    <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
                    </svg>
                    <div>
                        <p class="font-bold text-2xl text-orange-800 dark:text-orange-200">@Model.LowPerformingCourses</p>
