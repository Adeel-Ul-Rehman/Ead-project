<!-- Current Rule Info Card -->
<div class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 dark:from-blue-900/30 dark:via-indigo-900/30 dark:to-purple-900/30 border border-blue-200 dark:border-blue-700 rounded-xl shadow-sm p-6 mb-8 max-w-4xl">
    <div class="flex items-start gap-4">
        <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            </div>
        </div>
        <div class="flex-1">
            <h4 class="text-lg font-bold text-gray-900 dark:text-white mb-3 flex items-center gap-2">
                <span>üìã</span> Current Rule Information
            </h4>
            <div class="grid sm:grid-cols-2 gap-4">
                <!-- Teacher-Course Assignment -->
                <div class="bg-white/60 dark:bg-gray-800/60 rounded-lg p-4">
                    <div class="flex items-center gap-2 mb-2">
                        <svg class="w-4 h-4 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span class="text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Assignment</span>
                    </div>
                    <p class="text-sm text-gray-900 dark:text-white font-medium">
                        üë®‚Äçüè´ @Model.CurrentRule.TeacherCourse.Teacher.User.FullName
                    </p>
                    <p class="text-sm text-gray-700 dark:text-gray-300">
                        üìö @Model.CurrentRule.TeacherCourse.Course.Code - @Model.CurrentRule.TeacherCourse.Course.Title
                    </p>
                    <p class="text-xs text-indigo-600 dark:text-indigo-400 font-semibold mt-1">
                        üè∑Ô∏è @Model.CurrentRule.TeacherCourse.Section.Badge.Name
                    </p>
                </div>

                <!-- Schedule -->
                <div class="bg-white/60 dark:bg-gray-800/60 rounded-lg p-4">
                    <div class="flex items-center gap-2 mb-2">
                        <svg class="w-4 h-4 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Schedule</span>
                    </div>
                    <p class="text-sm text-gray-900 dark:text-white font-medium">
                        üìÖ @Model.CurrentRule.DaysOfWeek
                    </p>
                    <p class="text-sm text-gray-700 dark:text-gray-300">
                        üïê @Model.CurrentRule.StartTime.ToString(@"hh\:mm") (@Model.CurrentRule.DurationMinutes min)
                    </p>
                </div>

                <!-- Period -->
                <div class="bg-white/60 dark:bg-gray-800/60 rounded-lg p-4">
                    <div class="flex items-center gap-2 mb-2">
                        <svg class="w-4 h-4 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span class="text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Period</span>
                    </div>
                    <p class="text-sm text-gray-900 dark:text-white font-medium">
                        üìÜ @Model.CurrentRule.StartDate.ToString("MMM dd, yyyy")
                    </p>
                    <p class="text-sm text-gray-700 dark:text-gray-300">
                        üèÅ @Model.CurrentRule.EndDate.ToString("MMM dd, yyyy")
                    </p>
                </div>

                <!-- Location & Type -->
                <div class="bg-white/60 dark:bg-gray-800/60 rounded-lg p-4">
                    <div class="flex items-center gap-2 mb-2">
                        <svg class="w-4 h-4 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        <span class="text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Location & Type</span>
                    </div>
                    <p class="text-sm text-gray-900 dark:text-white font-medium">
                        üè¢ @(string.IsNullOrEmpty(Model.CurrentRule.Room) ? "No room specified" : Model.CurrentRule.Room)
                    </p>
                    <p class="text-sm text-gray-700 dark:text-gray-300">
                        üìñ @(string.IsNullOrEmpty(Model.CurrentRule.LectureType) ? "No type specified" : Model.CurrentRule.LectureType)
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Form Card -->
<div class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl overflow-hidden max-w-4xl">
    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Input.Id" />
        
        <div class="p-6 sm:p-8 space-y-8">
            
            <!-- Validation Summary -->
            <div asp-validation-summary="All" class="hidden"></div>
            
            <!-- Section 1: Days of Week -->
            <div class="border-l-4 border-blue-500 pl-6 py-2">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-cyan-600 rounded-lg flex items-center justify-center flex-shrink-0">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-cyan-600 dark:from-blue-400 dark:to-cyan-400">
                            Days of Week
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">Select which days this lecture occurs</p>
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3 flex items-center gap-2">
                        <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Select Days
                        <span class="text-red-500">*</span>
                    </label>
                    <div class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-7 gap-3">
                        @foreach (var day in new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" })
                        {
                            var dayShort = day.Substring(0, 3);
                            var dayEmoji = day switch {
                                "Monday" => "üåô",
                                "Tuesday" => "üî•",
                                "Wednesday" => "üåä",
                                "Thursday" => "‚ö°",
                                "Friday" => "üéâ",
                                "Saturday" => "üåû",
                                "Sunday" => "‚òÄÔ∏è",
                                _ => "üìÖ"
                            };
                            var isSelected = Model.Input.DaysOfWeek.Contains(day);
                            
                            <label class="relative flex items-center justify-center cursor-pointer group">
                                <input type="checkbox" name="daysOfWeek" value="@day" @(isSelected ? "checked" : "")
                                       class="peer sr-only">
                                <div class="w-full px-4 py-3 bg-gray-100 dark:bg-gray-700 border-2 border-gray-300 dark:border-gray-600 rounded-lg peer-checked:bg-gradient-to-br peer-checked:from-blue-500 peer-checked:to-indigo-600 peer-checked:border-blue-500 peer-checked:text-white text-gray-700 dark:text-gray-300 font-semibold text-center transition-all duration-200 group-hover:scale-105 group-hover:shadow-lg">
                                    <div class="flex flex-col items-center gap-1">
                                        <span class="text-lg">@dayEmoji</span>
                                        <span class="text-xs sm:text-sm">@dayShort</span>
                                    </div>
                                </div>
                            </label>
                        }
                    </div>
                    <span asp-validation-for="Input.DaysOfWeek" class="text-red-500 text-sm mt-2 block"></span>
                    <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">üí° Select multiple days for classes that meet more than once per week</p>
                </div>
            </div>

            <!-- Section 2: Time & Duration -->
            <div class="border-l-4 border-green-500 pl-6 py-2">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 bg-gradient-to-br from-green-500 to-emerald-600 rounded-lg flex items-center justify-center flex-shrink-0">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-emerald-600 dark:from-green-400 dark:to-emerald-400">
                            Time & Duration
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">Define when the lecture starts and how long it lasts</p>
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Start Time -->
                    <div>
                        <label asp-for="Input.StartTime" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-2">
                            <svg class="w-4 h-4 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Start Time
                            <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Input.StartTime" type="time" required
                               class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:text-white transition-all duration-200 hover:border-green-300">
                        <span asp-validation-for="Input.StartTime" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <!-- Duration -->
                    <div>
                        <label asp-for="Input.DurationMinutes" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-2">
                            <svg class="w-4 h-4 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                            Duration (Minutes)
                            <span class="text-red-500">*</span>
                        </label>
                        <select asp-for="Input.DurationMinutes" required
                                class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:text-white transition-all duration-200 hover:border-green-300">
                            <option value="">-- Select Duration --</option>
                            @foreach (var duration in new[] { 30, 45, 50, 60, 75, 90, 120 })
                            {
                                <option value="@duration" selected="@(Model.Input.DurationMinutes == duration)">‚è±Ô∏è @duration minutes</option>
                            }
                        </select>
                        <span asp-validation-for="Input.DurationMinutes" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                </div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">‚è∞ Standard class periods are typically 50-60 minutes</p>
            </div>

            <!-- Section 3: Location & Type -->
            <div class="border-l-4 border-orange-500 pl-6 py-2">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 bg-gradient-to-br from-orange-500 to-red-600 rounded-lg flex items-center justify-center flex-shrink-0">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-orange-600 to-red-600 dark:from-orange-400 dark:to-red-400">
                            Location & Type
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">Specify where and what type of lecture this is</p>
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Room -->
                    <div>
                        <label asp-for="Input.Room" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-2">
                            <svg class="w-4 h-4 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            Room
                            <span class="text-gray-500 text-xs">(Optional)</span>
                        </label>
                        <input asp-for="Input.Room" type="text"
                               class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 dark:bg-gray-700 dark:text-white transition-all duration-200 hover:border-orange-300"
                               placeholder="e.g., Room 101, Lab A, Building C">
                        <span asp-validation-for="Input.Room" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <!-- Lecture Type -->
                    <div>
                        <label asp-for="Input.LectureType" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-2">
                            <svg class="w-4 h-4 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
                            </svg>
                            Lecture Type
                            <span class="text-gray-500 text-xs">(Optional)</span>
                        </label>
                        <select asp-for="Input.LectureType"
                                class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 dark:bg-gray-700 dark:text-white transition-all duration-200 hover:border-orange-300">
                            <option value="">-- Select Type --</option>
                            <option value="Theory" selected="@(Model.Input.LectureType == "Theory")">üìñ Theory</option>
                            <option value="Lab" selected="@(Model.Input.LectureType == "Lab")">üî¨ Lab</option>
                            <option value="Practical" selected="@(Model.Input.LectureType == "Practical")">üõ†Ô∏è Practical</option>
                        </select>
                        <span asp-validation-for="Input.LectureType" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                </div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">üè¢ Room and type information helps with scheduling and resource allocation</p>
            </div>

            <!-- Section 4: Date Range -->
            <div class="border-l-4 border-pink-500 pl-6 py-2">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 bg-gradient-to-br from-pink-500 to-rose-600 rounded-lg flex items-center justify-center flex-shrink-0">
                        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-pink-600 to-rose-600 dark:from-pink-400 dark:to-rose-400">
                            Validity Period
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">Define the date range when this rule is active</p>
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Start Date -->
                    <div>
                        <label asp-for="Input.StartDate" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-2">
                            <svg class="w-4 h-4 text-pink-600 dark:text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            Valid From
                            <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Input.StartDate" type="date" required
                               class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500 dark:bg-gray-700 dark:text-white transition-all duration-200 hover:border-pink-300">
                        <span asp-validation-for="Input.StartDate" class="text-red-500 text-sm mt-1 block"></span>
                    </div>

                    <!-- End Date -->
                    <div>
                        <label asp-for="Input.EndDate" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-2">
                            <svg class="w-4 h-4 text-pink-600 dark:text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            Valid Until
                            <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Input.EndDate" type="date" required
                               class="w-full px-4 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500 dark:bg-gray-700 dark:text-white transition-all duration-200 hover:border-pink-300">
                        <span asp-validation-for="Input.EndDate" class="text-red-500 text-sm mt-1 block"></span>
                    </div>
                </div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">üìÜ Typically matches the semester or term dates (e.g., Jan 15 - May 15)</p>
            </div>

        </div>

        <!-- Action Buttons -->
        <div class="bg-gray-50 dark:bg-gray-900 px-6 sm:px-8 py-6 border-t border-gray-200 dark:border-gray-700">
            <div class="flex flex-col sm:flex-row gap-4">
                <button type="submit" class="flex-1 bg-gradient-to-r from-yellow-500 to-orange-600 hover:from-yellow-600 hover:to-orange-700 text-white font-bold py-4 px-6 rounded-lg shadow-xl transform hover:scale-105 transition-all duration-300 flex items-center justify-center gap-3">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-lg">Update Rule</span>
                </button>
                <a href="/Admin/TimetableRules" class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-bold py-4 px-6 rounded-lg shadow-lg transition-all duration-300 hover:scale-105 flex items-center justify-center gap-3">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    <span class="text-lg">Cancel</span>
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Form validation and feedback
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const requiredFields = form.querySelectorAll('[required]');
            const daysCheckboxes = document.querySelectorAll('input[name="daysOfWeek"]');
            
            // Add real-time validation feedback
            requiredFields.forEach(field => {
                field.addEventListener('blur', function() {
                    if (!this.value) {
                        this.classList.add('border-red-500', 'focus:ring-red-500', 'focus:border-red-500');
                        this.classList.remove('border-gray-300');
                    } else {
                        this.classList.remove('border-red-500', 'focus:ring-red-500', 'focus:border-red-500');
                        this.classList.add('border-gray-300');
                    }
                });
                
                field.addEventListener('input', function() {
                    if (this.value) {
                        this.classList.remove('border-red-500', 'focus:ring-red-500', 'focus:border-red-500');
                        this.classList.add('border-gray-300');
                    }
                });
            });
            
            // Validate at least one day is selected
            form.addEventListener('submit', function(e) {
                const checkedDays = Array.from(daysCheckboxes).filter(cb => cb.checked);
                
                if (checkedDays.length === 0) {
                    e.preventDefault();
                    alert('‚ö†Ô∏è Please select at least one day of the week for this timetable rule.');
                    daysCheckboxes[0].focus();
                    return false;
                }
                
                // Show loading state on submit button
                const submitBtn = form.querySelector('button[type="submit"]');
                submitBtn.disabled = true;
                submitBtn.innerHTML = `
                    <svg class="animate-spin h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span class="text-lg">Updating Rule...</span>
                `;
            });
            
            // Date validation - end date should be after start date
            const startDateInput = document.querySelector('input[name="Input.StartDate"]');
            const endDateInput = document.querySelector('input[name="Input.EndDate"]');
            
            function validateDates() {
                if (startDateInput.value && endDateInput.value) {
                    const startDate = new Date(startDateInput.value);
                    const endDate = new Date(endDateInput.value);
                    
                    if (endDate < startDate) {
                        endDateInput.setCustomValidity('End date must be after start date');
                        endDateInput.reportValidity();
                    } else {
                        endDateInput.setCustomValidity('');
                    }
                }
            }
            
            startDateInput.addEventListener('change', validateDates);
            endDateInput.addEventListener('change', validateDates);
        });
    </script>
