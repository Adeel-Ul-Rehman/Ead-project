@page
@model attendenceProject.Pages.Admin.TimetableRules.IndexModel
@{
    ViewData["Title"] = "Timetable Rules";
}

<style>
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in {
        animation: fadeIn 0.5s ease-out;
    }
</style>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-gradient-to-r from-green-50 to-green-100 dark:from-green-900 dark:to-green-800 border-l-4 border-green-500 p-4 mb-6 rounded-lg shadow-md animate-fade-in">
        <div class="flex items-center">
            <svg class="w-6 h-6 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-green-700 dark:text-green-200 font-medium">@TempData["SuccessMessage"]</p>
        </div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-gradient-to-r from-red-50 to-red-100 dark:from-red-900 dark:to-red-800 border-l-4 border-red-500 p-4 mb-6 rounded-lg shadow-md animate-fade-in">
        <div class="flex items-center">
            <svg class="w-6 h-6 text-red-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-red-700 dark:text-red-200 font-medium">@TempData["ErrorMessage"]</p>
        </div>
    </div>
}

<!-- Header Section -->
<div class="mb-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white flex items-center gap-3">
                <span class="text-5xl">⏰</span>
                <span class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">Timetable Rules</span>
            </h1>
            <p class="text-gray-600 dark:text-gray-400 mt-2 text-lg">Define recurring lecture schedules for teacher-course assignments</p>
        </div>
        <a href="/Admin/TimetableRules/Create" class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold py-3 px-6 rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Rule
        </a>
    </div>
</div>

<!-- Info Banner -->
<div class="bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900 dark:to-indigo-900 border-l-4 border-blue-500 p-4 mb-6 rounded-lg shadow-md">
    <div class="flex items-start">
        <svg class="w-6 h-6 text-blue-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="text-blue-700 dark:text-blue-200 text-sm">
            <p class="font-semibold mb-1">How Timetable Rules Work:</p>
            <ul class="list-disc list-inside space-y-1 ml-2">
                <li>Define recurring patterns for lectures (e.g., "Every Monday and Wednesday at 9:00 AM")</li>
                <li>System automatically generates individual lecture instances based on rules</li>
                <li>Holidays are automatically skipped when generating lectures</li>
                <li>Each rule links to a teacher-course assignment and section</li>
                <li>Changes to rules will update future lectures accordingly</li>
            </ul>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-6 sm:mb-8">
    <div class="bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-lg shadow-lg p-4 sm:p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-indigo-100 text-sm mb-1">Total Rules</p>
                <p class="text-2xl sm:text-3xl font-bold">@Model.TotalRules</p>
            </div>
            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-indigo-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
        </div>
    </div>

    <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg shadow-lg p-4 sm:p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-purple-100 text-sm mb-1">Active Teachers</p>
                <p class="text-2xl sm:text-3xl font-bold">@Model.ActiveTeachers</p>
            </div>
            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-purple-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
        </div>
    </div>

    <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-lg shadow-lg p-4 sm:p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-green-100 text-sm mb-1">Generated Lectures</p>
                <p class="text-2xl sm:text-3xl font-bold">@Model.TotalLectures</p>
            </div>
            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-green-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
        </div>
    </div>

    <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg shadow-lg p-4 sm:p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-orange-100 text-sm mb-1">Weekly Hours</p>
                <p class="text-2xl sm:text-3xl font-bold">@Model.AverageWeeklyHours</p>
            </div>
            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-orange-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
        </div>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 sm:p-6 mb-6">
    <form method="get" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Search</label>
            <input type="text" name="searchTerm" value="@Model.SearchTerm" 
                   class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                   placeholder="Teacher or course...">
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Department</label>
            <select name="badgeId" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                <option value="">All Departments</option>
                @foreach (var badge in Model.AllBadges)
                {
                    <option value="@badge.Id" selected="@(Model.SelectedBadgeId == badge.Id)">@badge.Name</option>
                }
            </select>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Teacher-Course</label>
            <select name="teacherCourseId" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                <option value="">All Assignments</option>
                @foreach (var tc in Model.AllTeacherCourses)
                {
                    <option value="@tc.Id" selected="@(Model.SelectedTeacherCourseId == tc.Id)">
                        @tc.Teacher.User.FullName - @tc.Course.Code
                    </option>
                }
            </select>
        </div>

        <div class="flex items-end">
            <button type="submit" class="w-full bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white font-bold py-2 px-6 rounded-lg shadow-lg transition duration-300 flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                Search
            </button>
        </div>

        <div class="flex items-end">
            <a href="/Admin/TimetableRules" class="w-full bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-6 rounded-lg shadow-lg transition duration-300 flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Reset
            </a>
        </div>
    </form>
</div>

<!-- Timetable Rules Table -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
                <tr>
                    <th class="px-4 py-3 text-left text-sm font-bold">Teacher - Course</th>
                    <th class="px-4 py-3 text-left text-sm font-bold">Days & Time</th>
                    <th class="px-4 py-3 text-left text-sm font-bold hidden lg:table-cell">Duration</th>
                    <th class="px-4 py-3 text-left text-sm font-bold hidden xl:table-cell">Period</th>
                    <th class="px-4 py-3 text-left text-sm font-bold hidden lg:table-cell">Room/Type</th>
                    <th class="px-4 py-3 text-center text-sm font-bold">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                @if (Model.TimetableRules.Any())
                {
                    @foreach (var rule in Model.TimetableRules)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition duration-200">
                            <td class="px-4 py-3">
                                <div class="flex items-center gap-3">
                                    <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold">
                                        @rule.TeacherCourse.Teacher.User.FullName.Substring(0, 1)
                                    </div>
                                    <div>
                                        <div class="text-sm font-semibold text-gray-900 dark:text-white">@rule.TeacherCourse.Teacher.User.FullName</div>
                                        <div class="text-xs text-gray-600 dark:text-gray-400">@rule.TeacherCourse.Course.Code - @rule.TeacherCourse.Section.Name</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-4 py-3">
                                <div class="flex flex-wrap gap-1 mb-1">
                                    @foreach (var day in rule.DaysOfWeek.Split(','))
                                    {
                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200">
                                            @day.Trim()
                                        </span>
                                    }
                                </div>
                                <div class="text-xs text-gray-600 dark:text-gray-400">
                                    @{
                                        var time = DateTime.Today.Add(rule.StartTime);
                                        <text>@time.ToString("hh:mm tt")</text>
                                    }
                                </div>
                            </td>
                            <td class="px-4 py-3 hidden lg:table-cell">
                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                                    @rule.DurationMinutes min
                                </span>
                            </td>
                            <td class="px-4 py-3 hidden xl:table-cell">
                                <div class="text-sm text-gray-900 dark:text-white">@rule.StartDate.ToString("MMM dd, yyyy")</div>
                                <div class="text-xs text-gray-600 dark:text-gray-400">to @rule.EndDate.ToString("MMM dd, yyyy")</div>
                            </td>
                            <td class="px-4 py-3 hidden lg:table-cell">
                                <div class="space-y-1">
                                    @if (!string.IsNullOrEmpty(rule.Room))
                                    {
                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                            📍 @rule.Room
                                        </span>
                                    }
                                    @if (!string.IsNullOrEmpty(rule.LectureType))
                                    {
                                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
                                            @rule.LectureType
                                        </span>
                                    }
                                </div>
                            </td>
                            <td class="px-4 py-3">
                                <div class="flex items-center justify-center gap-2">
                                    <a href="/Admin/TimetableRules/Edit?id=@rule.Id" class="text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-300 transition duration-200" title="Edit">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                        </svg>
                                    </a>
                                    <button type="button" onclick="openDeleteModal('@rule.Id', '@rule.TeacherCourse.Teacher.User.FullName', '@rule.TeacherCourse.Course.Code')" class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300 transition duration-200" title="Delete">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-4 py-8 text-center">
                            <div class="flex flex-col items-center justify-center text-gray-500 dark:text-gray-400">
                                <svg class="w-16 h-16 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <p class="text-lg font-medium">No timetable rules found</p>
                                <p class="text-sm mt-1 mb-4">Try adjusting your search filters or create your first rule</p>
                                <a href="/Admin/TimetableRules/Create" class="inline-flex items-center gap-2 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold py-2 px-4 rounded-lg shadow-lg transition duration-300">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                                    </svg>
                                    Create First Rule
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TimetableRules.Any())
    {
        <div class="bg-gray-50 dark:bg-gray-700 px-4 py-3 border-t border-gray-200 dark:border-gray-600">
            <p class="text-sm text-gray-600 dark:text-gray-300">
                Showing <strong>@Model.TimetableRules.Count()</strong> timetable rule(s)
            </p>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50" onclick="closeDeleteModal(event)">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl p-6 max-w-md w-full mx-4" onclick="event.stopPropagation()">
        <div class="flex items-start mb-4">
            <div class="flex-shrink-0">
                <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            <div class="ml-4 flex-1">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Delete Timetable Rule</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300 mb-2">
                    Are you sure you want to delete the timetable rule for: <strong id="deleteItemName" class="text-gray-900 dark:text-white"></strong>?
                </p>
                <p class="text-sm text-red-600 dark:text-red-400 font-semibold">
                    ⚠️ This will cascade delete all generated lectures and their attendance records!
                </p>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
                    This action cannot be undone.
                </p>
            </div>
        </div>
        <div class="flex justify-end gap-3 mt-6">
            <button onclick="closeDeleteModal(event)" class="px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg transition duration-200">
                Cancel
            </button>
            <form id="deleteForm" method="post" asp-page-handler="Delete" class="inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="deleteId" value="" />
                <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition duration-200">
                    Delete Rule
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    function openDeleteModal(id, teacherName, courseCode) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteItemName').textContent = teacherName + ' - ' + courseCode;
        document.getElementById('deleteModal').classList.remove('hidden');
        document.getElementById('deleteModal').classList.add('flex');
    }

    function closeDeleteModal(event) {
        if (event) event.preventDefault();
        document.getElementById('deleteModal').classList.add('hidden');
        document.getElementById('deleteModal').classList.remove('flex');
    }

    // Close modal on Escape key
    document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
            const modal = document.getElementById('deleteModal');
            if (modal.classList.contains('flex')) {
                closeDeleteModal(event);
            }
        }
    });
</script>
