@page
@model attendenceProject.Pages.Admin.Reports.LateMarkingModel
@{
    ViewData["Title"] = "Late Attendance Marking Report";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white">‚è∞ Late Attendance Marking Report</h1>
        <a asp-page="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition">
            ‚Üê Back to Reports
        </a>
    </div>

    <!-- Filters -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">üîç Filters</h2>
        <form method="get">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Start Date</label>
                    <input type="date" asp-for="StartDate" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">End Date</label>
                    <input type="date" asp-for="EndDate" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white" />
                </div>
                <div class="flex items-end gap-2">
                    <button type="submit" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition">
                        Apply Filters
                    </button>
                    <a asp-page="LateMarking" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition">
                        Clear
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Export Button -->
    <div class="mb-6">
        <a asp-page-handler="ExportCsv" asp-all-route-data="@(new Dictionary<string, string> { 
            ["StartDate"] = Model.StartDate?.ToString("yyyy-MM-dd") ?? "", 
            ["EndDate"] = Model.EndDate?.ToString("yyyy-MM-dd") ?? ""
        })" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg transition">
            üì• Export CSV
        </a>
    </div>

    <!-- Summary Cards -->
    @if (Model.LateMarkings.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
            <div class="bg-gradient-to-br from-red-500 to-red-600 rounded-xl shadow-lg p-6 text-white">
                <p class="text-sm opacity-90 mb-1">Total Late Markings</p>
                <p class="text-4xl font-bold">@Model.LateMarkings.Count</p>
            </div>
            <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl shadow-lg p-6 text-white">
                <p class="text-sm opacity-90 mb-1">Very Late (>24h)</p>
                <p class="text-4xl font-bold">@Model.LateMarkings.Count(l => l.HoursLate > 24)</p>
            </div>
            <div class="bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-xl shadow-lg p-6 text-white">
                <p class="text-sm opacity-90 mb-1">Avg Hours Late</p>
                <p class="text-4xl font-bold">@Math.Round(Model.LateMarkings.Average(l => l.HoursLate), 1)h</p>
            </div>
        </div>
    }

    <!-- Late Markings Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Course</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Teacher</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Section</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Lecture Date</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Lecture End</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Marked At</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Hours Late</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Status</th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    @if (Model.LateMarkings.Any())
                    {
                        @foreach (var marking in Model.LateMarkings)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4 text-sm font-medium text-gray-900 dark:text-white">@marking.CourseName</td>
                                <td class="px-6 py-4 text-sm text-gray-900 dark:text-white">@marking.TeacherName</td>
                                <td class="px-6 py-4 text-sm text-gray-900 dark:text-white">@marking.Section</td>
                                <td class="px-6 py-4 text-center text-sm text-gray-900 dark:text-white">@marking.LectureDate.ToString("MMM dd, yyyy")</td>
                                <td class="px-6 py-4 text-center text-sm text-gray-900 dark:text-white">@marking.LectureEndTime.ToString("hh:mm tt")</td>
                                <td class="px-6 py-4 text-center text-sm text-gray-900 dark:text-white">@marking.MarkedAt.ToString("MMM dd, hh:mm tt")</td>
                                <td class="px-6 py-4 text-center">
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full @(marking.HoursLate > 24 ? "bg-red-100 text-red-800" : marking.HoursLate > 12 ? "bg-orange-100 text-orange-800" : "bg-yellow-100 text-yellow-800")">
                                        @marking.HoursLate h
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full @(marking.Status.Contains("Very") ? "bg-red-100 text-red-800" : marking.Status.Contains("Late") ? "bg-orange-100 text-orange-800" : "bg-yellow-100 text-yellow-800")">
                                        @marking.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
                                ‚úÖ No late markings found for the selected period. All attendance was marked on time!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
