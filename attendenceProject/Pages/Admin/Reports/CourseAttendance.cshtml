@page
@model attendenceProject.Pages.Admin.Reports.CourseAttendanceModel
@{
    ViewData["Title"] = "Course/Section Attendance Report";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white">üìö Course/Section Attendance Report</h1>
        <a asp-page="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition">
            ‚Üê Back to Reports
        </a>
    </div>

    <!-- Filters -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">üîç Filters</h2>
        <form method="get">
            <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Start Date</label>
                    <input type="date" asp-for="StartDate" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">End Date</label>
                    <input type="date" asp-for="EndDate" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Course</label>
                    <select asp-for="SelectedCourseId" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white">
                        <option value="">All Courses</option>
                        @foreach (var course in Model.Courses)
                        {
                            <option value="@course.Id">@course.Code - @course.Title</option>
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Section</label>
                    <select asp-for="SelectedSectionId" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md dark:bg-gray-700 dark:text-white">
                        <option value="">All Sections</option>
                        @foreach (var sec in Model.Sections)
                        {
                            <option value="@sec.Id">@sec.Name (@sec.Badge?.Name)</option>
                        }
                    </select>
                </div>
                <div class="flex items-end gap-2">
                    <button type="submit" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition">
                        Apply
                    </button>
                    <a asp-page="CourseAttendance" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition">
                        Clear
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Export Button -->
    <div class="mb-6">
        <a asp-page-handler="ExportCsv" asp-all-route-data="@(new Dictionary<string, string> { 
            ["StartDate"] = Model.StartDate?.ToString("yyyy-MM-dd") ?? "", 
            ["EndDate"] = Model.EndDate?.ToString("yyyy-MM-dd") ?? "",
            ["SelectedCourseId"] = Model.SelectedCourseId?.ToString() ?? "",
            ["SelectedSectionId"] = Model.SelectedSectionId?.ToString() ?? ""
        })" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg transition">
            üì• Export CSV
        </a>
    </div>

    <!-- Summary Cards -->
    @if (Model.CourseData.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
            <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl shadow-lg p-6 text-white">
                <p class="text-sm opacity-90 mb-1">Total Courses</p>
                <p class="text-4xl font-bold">@Model.CourseData.Count</p>
            </div>
            <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-xl shadow-lg p-6 text-white">
                <p class="text-sm opacity-90 mb-1">Total Lectures</p>
                <p class="text-4xl font-bold">@Model.CourseData.Sum(c => c.TotalLectures)</p>
            </div>
            <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl shadow-lg p-6 text-white">
                <p class="text-sm opacity-90 mb-1">Avg Attendance</p>
                <p class="text-4xl font-bold">@Math.Round(Model.CourseData.Average(c => c.AttendancePercentage), 1)%</p>
            </div>
            <div class="bg-gradient-to-br from-red-500 to-red-600 rounded-xl shadow-lg p-6 text-white">
                <p class="text-sm opacity-90 mb-1">Poor Courses</p>
                <p class="text-4xl font-bold">@Model.CourseData.Count(c => c.AttendancePercentage < 50)</p>
            </div>
        </div>
    }

    <!-- Course Attendance Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Course</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Section</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Lectures</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Students</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Present</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Absent</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Attendance %</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Status</th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                    @if (Model.CourseData.Any())
                    {
                        @foreach (var course in Model.CourseData)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4">
                                    <div>
                                        <p class="text-sm font-medium text-gray-900 dark:text-white">@course.CourseName</p>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">@course.CourseCode</p>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900 dark:text-white">@course.Section</td>
                                <td class="px-6 py-4 text-center text-sm font-semibold text-gray-900 dark:text-white">@course.TotalLectures</td>
                                <td class="px-6 py-4 text-center text-sm font-semibold text-gray-900 dark:text-white">@course.TotalStudents</td>
                                <td class="px-6 py-4 text-center text-sm text-green-600 font-semibold">@course.PresentCount</td>
                                <td class="px-6 py-4 text-center text-sm text-red-600 font-semibold">@course.AbsentCount</td>
                                <td class="px-6 py-4 text-center">
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full @(course.AttendancePercentage >= 75 ? "bg-green-100 text-green-800" : course.AttendancePercentage >= 65 ? "bg-blue-100 text-blue-800" : course.AttendancePercentage >= 50 ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800")">
                                        @course.AttendancePercentage%
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full @(course.Status == "Excellent" ? "bg-green-100 text-green-800" : course.Status == "Good" ? "bg-blue-100 text-blue-800" : course.Status == "Average" ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800")">
                                        @course.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">
                                No course attendance data found for the selected filters.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
