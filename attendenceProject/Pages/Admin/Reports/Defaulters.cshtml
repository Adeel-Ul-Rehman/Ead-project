@page
@model attendenceProject.Pages.Admin.Reports.DefaultersModel
@{
    ViewData["Title"] = "Defaulter Students Report";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">‚ö†Ô∏è Defaulter Students Report</h1>
        <a asp-page="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg">
            ‚Üê Back to Reports
        </a>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">üîç Filters</h2>
        <form method="get">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
                    <input type="date" asp-for="StartDate" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">End Date</label>
                    <input type="date" asp-for="EndDate" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Badge</label>
                    <select asp-for="SelectedBadgeId" class="w-full px-3 py-2 border border-gray-300 rounded-md" onchange="this.form.submit()">
                        <option value="">All Badges</option>
                        @foreach (var badge in Model.Badges)
                        {
                            <option value="@badge.Id">@badge.Name</option>
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Section</label>
                    <select asp-for="SelectedSectionId" class="w-full px-3 py-2 border border-gray-300 rounded-md" disabled="@(Model.SelectedBadgeId == null)">
                        <option value="">All Sections</option>
                        @foreach (var sec in Model.Sections)
                        {
                            <option value="@sec.Id">@sec.Name - @sec.Session</option>
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Threshold %</label>
                    <input type="number" asp-for="ThresholdPercentage" min="0" max="100" step="0.1" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                </div>
            </div>
            <div class="flex space-x-2 mt-4">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-md">
                    üîé Generate Report
                </button>
                <a asp-page="Defaulters" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded-md inline-block">
                    Clear Filters
                </a>
            </div>
        </form>
    </div>

    @if (Model.DefaultersData.Any())
    {
        <!-- Export Options -->
        <div class="mb-4 flex justify-between items-center">
            <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded flex-1 mr-4">
                <div class="flex items-center">
                    <div class="text-3xl mr-3">üö®</div>
                    <div>
                        <div class="text-xl font-bold text-red-900">@Model.DefaultersData.Count Students</div>
                        <div class="text-sm text-red-700">Below @Model.ThresholdPercentage% attendance threshold</div>
                    </div>
                </div>
            </div>
            <div class="flex space-x-2">
                <a asp-page-handler="ExportCsv"
                   asp-route-StartDate="@Model.StartDate"
                   asp-route-EndDate="@Model.EndDate"
                   asp-route-SelectedBadgeId="@Model.SelectedBadgeId"
                   asp-route-SelectedSectionId="@Model.SelectedSectionId"
                   asp-route-ThresholdPercentage="@Model.ThresholdPercentage"
                   class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg whitespace-nowrap">
                    üì• Export CSV
                </a>
                <button onclick="window.print()" class="bg-purple-500 hover:bg-purple-600 text-white px-4 py-2 rounded-lg whitespace-nowrap">
                    üñ®Ô∏è Print
                </button>
            </div>
        </div>

        <!-- Data Table -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-red-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Roll No</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Student Name</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Email</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Section</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase">Badge</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-700 uppercase">Total</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-700 uppercase">Present</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-700 uppercase">Absent</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-700 uppercase">Attendance %</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-700 uppercase">Shortage %</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var data in Model.DefaultersData)
                        {
                            <tr class="hover:bg-gray-50 @(data.AttendancePercentage < 50 ? "bg-red-50" : "")">
                                <td class="px-6 py-4 text-sm font-medium text-gray-900">@data.RollNo</td>
                                <td class="px-6 py-4 text-sm text-gray-700">@data.StudentName</td>
                                <td class="px-6 py-4 text-sm text-gray-600">@data.Email</td>
                                <td class="px-6 py-4 text-sm text-gray-700">@data.Section</td>
                                <td class="px-6 py-4 text-sm text-gray-700">@data.Badge</td>
                                <td class="px-6 py-4 text-sm text-center font-semibold">@data.TotalLectures</td>
                                <td class="px-6 py-4 text-sm text-center text-green-600 font-semibold">@data.PresentCount</td>
                                <td class="px-6 py-4 text-sm text-center text-red-600 font-semibold">@data.AbsentCount</td>
                                <td class="px-6 py-4 text-sm text-center">
                                    <span class="text-lg font-bold text-red-600">
                                        @data.AttendancePercentage%
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm text-center">
                                    <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full font-semibold">
                                        -@data.Shortage%
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Action Recommendations -->
        <div class="mt-6 bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded">
            <h3 class="text-lg font-semibold text-yellow-900 mb-2">üì¢ Recommended Actions</h3>
            <ul class="list-disc list-inside text-yellow-800 space-y-1">
                <li>Send notification emails to defaulter students and their parents</li>
                <li>Schedule counseling sessions for students with critical attendance</li>
                <li>Monitor attendance more closely in upcoming lectures</li>
                <li>Consider academic warnings for students below 65%</li>
            </ul>
        </div>
    }
    else if (Model.StartDate.HasValue && Model.EndDate.HasValue)
    {
        <div class="bg-green-50 border-l-4 border-green-400 p-4 rounded">
            <p class="text-green-700">
                üéâ Great news! No students found below @Model.ThresholdPercentage% attendance threshold for the selected filters.
            </p>
        </div>
    }
</div>
