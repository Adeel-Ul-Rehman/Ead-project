@page
@model attendenceProject.Pages.Admin.TeacherCourses.IndexModel
@{
    ViewData["Title"] = "Course Assignments";
}

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-50 dark:bg-green-900 border-l-4 border-green-500 p-4 mb-6 rounded-lg shadow-md">
        <div class="flex items-center">
            <svg class="w-6 h-6 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-green-700 dark:text-green-200 font-medium">@TempData["SuccessMessage"]</p>
        </div>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-50 dark:bg-red-900 border-l-4 border-red-500 p-4 mb-6 rounded-lg shadow-md">
        <div class="flex items-center">
            <svg class="w-6 h-6 text-red-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-red-700 dark:text-red-200 font-medium">@TempData["ErrorMessage"]</p>
        </div>
    </div>
}

<!-- Header Section -->
<div class="mb-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div>
            <h1 class="text-4xl font-bold text-gray-900 dark:text-white flex items-center gap-3">
                <span class="text-5xl">üìö</span>
                <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Course Assignments</span>
            </h1>
            <p class="text-gray-600 dark:text-gray-400 mt-2 text-lg">Assign teachers to courses for specific sections</p>
        </div>
        <a href="/Admin/TeacherCourses/Create" class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-bold py-3 px-6 rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            New Assignment
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6 mb-6 sm:mb-8">
    <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg shadow-lg p-4 sm:p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-blue-100 text-sm mb-1">Total Assignments</p>
                <p class="text-2xl sm:text-3xl font-bold">@Model.TotalAssignments</p>
            </div>
            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
        </div>
    </div>

    <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg shadow-lg p-4 sm:p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-purple-100 text-sm mb-1">Active Teachers</p>
                <p class="text-2xl sm:text-3xl font-bold">@Model.ActiveTeachers</p>
            </div>
            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-purple-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
        </div>
    </div>

    <div class="bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg shadow-lg p-4 sm:p-6 text-white">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-orange-100 text-sm mb-1">Sections Covered</p>
                <p class="text-2xl sm:text-3xl font-bold">@Model.SectionsCovered</p>
            </div>
            <svg class="w-10 h-10 sm:w-12 sm:h-12 text-orange-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
        </div>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 sm:p-6 mb-6">
    <form method="get" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Search Teacher</label>
            <input type="text" name="searchTerm" value="@Model.SearchTerm" 
                   class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                   placeholder="Teacher name">
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Department</label>
            <select name="badgeId" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                <option value="">All Departments</option>
                @foreach (var badge in Model.AllBadges)
                {
                    <option value="@badge.Id" selected="@(Model.SelectedBadgeId == badge.Id)">@badge.Name</option>
                }
            </select>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Section</label>
            <select name="sectionId" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                <option value="">All Sections</option>
                @foreach (var sec in Model.AllSections)
                {
                    <option value="@sec.Id" selected="@(Model.SelectedSectionId == sec.Id)">
                        @sec.Badge.Name - Sem @sec.Semester - @sec.Name
                    </option>
                }
            </select>
        </div>

        <div class="flex items-end">
            <button type="submit" class="w-full bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white font-bold py-2 px-6 rounded-lg shadow-lg transition duration-300 flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                Search
            </button>
        </div>

        <div class="flex items-end">
            <a href="/Admin/TeacherCourses" class="w-full bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-6 rounded-lg shadow-lg transition duration-300 flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
                Reset
            </a>
        </div>
    </form>
</div>

<!-- Assignments Table -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gradient-to-r from-indigo-500 to-purple-600 text-white">
                <tr>
                    <th class="px-4 py-3 text-left text-sm font-bold">Teacher</th>
                    <th class="px-4 py-3 text-left text-sm font-bold">Course</th>
                    <th class="px-4 py-3 text-left text-sm font-bold">Section</th>
                    <th class="px-4 py-3 text-left text-sm font-bold hidden lg:table-cell">Type</th>
                    <th class="px-4 py-3 text-center text-sm font-bold">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                @if (Model.TeacherCourses.Any())
                {
                    @foreach (var tc in Model.TeacherCourses)
                    {
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition duration-200">
                            <td class="px-4 py-3">
                                <div class="text-sm font-semibold text-gray-900 dark:text-white">@tc.Teacher.User.FullName</div>
                                <div class="text-xs text-gray-600 dark:text-gray-400">@tc.Teacher.Designation</div>
                            </td>
                            <td class="px-4 py-3">
                                <div class="text-sm font-semibold text-gray-900 dark:text-white">@tc.Course.Code</div>
                                <div class="text-xs text-gray-600 dark:text-gray-400">@tc.Course.Title</div>
                            </td>
                            <td class="px-4 py-3">
                                <div class="text-sm font-semibold text-gray-900 dark:text-white">@tc.Section.Badge.Name - Sem @tc.Section.Semester</div>
                                <div class="text-xs text-gray-600 dark:text-gray-400">@tc.Section.Name</div>
                            </td>
                            <td class="px-4 py-3 hidden lg:table-cell">
                                @if (tc.Course.IsLab)
                                {
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
                                        Lab
                                    </span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                        Theory
                                    </span>
                                }
                            </td>
                            <td class="px-4 py-3">
                                <div class="flex items-center justify-center gap-2">
                                    <button type="button" data-id="@tc.Id" data-name="@tc.Teacher.User.FullName - @tc.Course.Code (@tc.Section.Name)" onclick="openDeleteModal(this.getAttribute('data-id'), this.getAttribute('data-name'))" class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300 transition duration-200" title="Delete">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="px-4 py-8 text-center">
                            <div class="flex flex-col items-center justify-center text-gray-500 dark:text-gray-400">
                                <svg class="w-16 h-16 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                                </svg>
                                <p class="text-lg font-medium">No assignments found</p>
                                <p class="text-sm mt-1">Try adjusting your search filters or create a new assignment</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TeacherCourses.Any())
    {
        <div class="bg-gray-50 dark:bg-gray-700 px-4 py-3 border-t border-gray-200 dark:border-gray-600">
            <p class="text-sm text-gray-600 dark:text-gray-300">
                Showing <strong>@Model.TeacherCourses.Count()</strong> assignment(s)
            </p>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50" onclick="closeDeleteModal(event)">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl p-6 max-w-md w-full mx-4" onclick="event.stopPropagation()">
        <div class="flex items-start mb-4">
            <div class="flex-shrink-0">
                <svg class="w-12 h-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
            </div>
            <div class="ml-4 flex-1">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Delete Teacher-Course Assignment</h3>
                <p class="text-sm text-gray-600 dark:text-gray-300 mb-2">
                    Are you sure you want to delete: <strong id="deleteItemName" class="text-gray-900 dark:text-white"></strong>?
                </p>
                <p class="text-sm text-red-600 dark:text-red-400 font-semibold">
                    ‚ö†Ô∏è This will also delete all timetable rules, lectures, and attendance records for this assignment!
                </p>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
                    This action cannot be undone.
                </p>
            </div>
        </div>
        <div class="flex justify-end gap-3 mt-6">
            <button onclick="closeDeleteModal(event)" class="px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg transition duration-200">
                Cancel
            </button>
            <form id="deleteForm" method="post" asp-page-handler="Delete" class="inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="deleteId" value="" />
                <button type="submit" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition duration-200">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>

<script>
    function openDeleteModal(id, name) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteItemName').textContent = name;
        document.getElementById('deleteModal').classList.remove('hidden');
        document.getElementById('deleteModal').classList.add('flex');
    }

    function closeDeleteModal(event) {
        if (event) event.preventDefault();
        document.getElementById('deleteModal').classList.add('hidden');
        document.getElementById('deleteModal').classList.remove('flex');
    }
</script>
