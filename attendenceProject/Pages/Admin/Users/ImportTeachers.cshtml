@page
@model attendenceProject.Pages.Admin.Users.ImportTeachersModel
@{
    ViewData["Title"] = "Import Teachers";
}

<div class="mx-auto">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg">
        <!-- Header -->
        <div class="bg-gradient-to-r from-purple-600 to-pink-600 p-6 rounded-t-lg">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <span class="text-4xl">üë®‚Äçüè´</span>
                    <div>
                        <h1 class="text-2xl sm:text-3xl font-bold text-white">Import Teachers</h1>
                        <p class="text-purple-100 text-sm">Bulk upload teachers from CSV/Excel file</p>
                    </div>
                </div>
                <a href="/Admin/Users" class="bg-white/20 hover:bg-white/30 text-white px-4 py-2 rounded-lg text-sm flex items-center gap-2 transition">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back
                </a>
            </div>
        </div>

        <div class="p-6 space-y-6">
            <!-- File Format Instructions -->
            <div class="bg-purple-50 dark:bg-purple-900/20 border-l-4 border-purple-500 p-4 rounded">
                <div class="flex items-start gap-3">
                    <svg class="w-6 h-6 text-purple-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                        <h3 class="font-semibold text-purple-900 dark:text-purple-100 mb-2">Required File Format</h3>
                        <p class="text-sm text-purple-800 dark:text-purple-200 mb-2">Your CSV/Excel file must have the following columns in this exact order:</p>
                        <div class="bg-white dark:bg-gray-800 p-3 rounded font-mono text-xs border border-purple-200 dark:border-purple-700">
                            <div class="grid grid-cols-3 gap-2 font-bold text-purple-700 dark:text-purple-300 mb-1">
                                <span>FullName</span>
                                <span>Email</span>
                                <span>BadgeNumber</span>
                            </div>
                            <div class="grid grid-cols-3 gap-2 text-gray-600 dark:text-gray-400">
                                <span>Dr. Sarah Wilson</span>
                                <span>sarah@university.edu</span>
                                <span>TEACH001</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="bg-red-50 dark:bg-red-900/20 border-l-4 border-red-500 p-4 rounded">
                    <p class="text-red-800 dark:text-red-200">@Model.ErrorMessage</p>
                </div>
            }

            @if (Model.Step == 1)
            {
                <form method="post" enctype="multipart/form-data" asp-page-handler="Upload">
                    @Html.AntiForgeryToken()
                    <div class="border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-8 text-center hover:border-purple-500 transition">
                        <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                        </svg>
                        <label for="file" class="block mb-2">
                            <span class="text-lg font-semibold text-gray-700 dark:text-gray-300">Choose CSV or Excel File</span>
                            <span class="block text-sm text-gray-500 mt-1">Supported formats: .csv, .xlsx</span>
                        </label>
                        <input type="file" id="file" name="file" accept=".csv,.xlsx" required class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-purple-50 file:text-purple-700 hover:file:bg-purple-100 cursor-pointer mt-4" />
                    </div>
                    <div class="flex justify-end mt-6">
                        <button type="submit" class="bg-purple-600 hover:bg-purple-700 text-white font-semibold px-6 py-3 rounded-lg transition flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Validate & Preview
                        </button>
                    </div>
                </form>
            }

            @if (Model.Step == 2 && Model.ValidationResult != null)
            {
                <div class="space-y-6">
                    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                        <div class="bg-purple-50 dark:bg-purple-900/20 p-4 rounded-lg border border-purple-200 dark:border-purple-800">
                            <div class="text-purple-600 dark:text-purple-400 text-sm font-medium">Total Records</div>
                            <div class="text-2xl font-bold text-purple-900 dark:text-purple-100">@Model.ValidationResult.TotalRecords</div>
                        </div>
                        <div class="bg-green-50 dark:bg-green-900/20 p-4 rounded-lg border border-green-200 dark:border-green-800">
                            <div class="text-green-600 dark:text-green-400 text-sm font-medium">Valid Records</div>
                            <div class="text-2xl font-bold text-green-900 dark:text-green-100">@Model.ValidationResult.ValidCount</div>
                        </div>
                        <div class="bg-red-50 dark:bg-red-900/20 p-4 rounded-lg border border-red-200 dark:border-red-800">
                            <div class="text-red-600 dark:text-red-400 text-sm font-medium">Invalid/Skipped</div>
                            <div class="text-2xl font-bold text-red-900 dark:text-red-100">@Model.ValidationResult.ErrorCount</div>
                        </div>
                    </div>

                    @if (Model.ValidationResult.ValidCount > 0)
                    {
                        <div>
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-3">‚úÖ Valid Records (@Model.ValidationResult.ValidCount)</h3>
                            <div class="overflow-x-auto border border-gray-200 dark:border-gray-700 rounded-lg">
                                <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                                    <thead class="bg-gray-50 dark:bg-gray-700">
                                        <tr>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">#</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Full Name</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Email</th>
                                            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Badge Number</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
                                        @for (int i = 0; i < Model.ValidationResult.ValidRecords.Count && i < 100; i++)
                                        {
                                            var record = Model.ValidationResult.ValidRecords[i];
                                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                                <td class="px-4 py-3 text-sm text-gray-500 dark:text-gray-400">@(i + 1)</td>
                                                <td class="px-4 py-3 text-sm font-medium text-gray-900 dark:text-white">@record.FullName</td>
                                                <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-300">@record.Email</td>
                                                <td class="px-4 py-3 text-sm font-mono text-gray-600 dark:text-gray-300">@record.BadgeNumber</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }

                    @if (Model.ValidationResult.ErrorCount > 0)
                    {
                        <div>
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-3">‚ùå Invalid Records (will be skipped)</h3>
                            <div class="space-y-2 max-h-96 overflow-y-auto">
                                @foreach (var error in Model.ValidationResult.Errors)
                                {
                                    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-3">
                                        <div class="flex items-start gap-2">
                                            <span class="bg-red-200 dark:bg-red-800 text-red-900 dark:text-red-100 text-xs font-bold px-2 py-1 rounded">Row @error.RowNumber</span>
                                            <div class="flex-1">
                                                <p class="text-sm font-medium text-gray-900 dark:text-white">@error.FullName - @error.Email</p>
                                                <ul class="mt-1 text-xs text-red-700 dark:text-red-300 list-disc list-inside">
                                                    @foreach (var msg in error.ErrorMessages)
                                                    {
                                                        <li>@msg</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <form method="post" asp-page-handler="Confirm" class="flex gap-3 justify-end">
                        @Html.AntiForgeryToken()
                        <a href="/Admin/Users/ImportTeachers" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-3 rounded-lg transition">Cancel</a>
                        @if (Model.ValidationResult.ValidCount > 0)
                        {
                            <button type="submit" class="bg-green-600 hover:bg-green-700 text-white font-semibold px-6 py-3 rounded-lg transition flex items-center gap-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                Import @Model.ValidationResult.ValidCount Teacher(s)
                            </button>
                        }
                    </form>
                </div>
            }

            @if (Model.Step == 3 && Model.CreateResult != null)
            {
                <div class="space-y-6">
                    <div class="bg-green-50 dark:bg-green-900/20 border-l-4 border-green-500 p-6 rounded-lg">
                        <div class="flex items-center gap-3 mb-4">
                            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <div>
                                <h3 class="text-lg font-bold text-green-900 dark:text-green-100">Import Completed!</h3>
                                <p class="text-sm text-green-700 dark:text-green-300">Teachers have been created and credentials are being emailed.</p>
                            </div>
                        </div>
                        <div class="grid grid-cols-2 gap-4 mt-4">
                            <div class="bg-white dark:bg-gray-800 p-3 rounded border border-green-200 dark:border-green-800">
                                <div class="text-green-600 dark:text-green-400 text-sm">Successfully Created</div>
                                <div class="text-2xl font-bold text-green-900 dark:text-green-100">@Model.CreateResult.SuccessCount</div>
                            </div>
                            <div class="bg-white dark:bg-gray-800 p-3 rounded border border-gray-200 dark:border-gray-700">
                                <div class="text-gray-600 dark:text-gray-400 text-sm">Skipped</div>
                                <div class="text-2xl font-bold text-gray-900 dark:text-white">@Model.CreateResult.SkippedCount</div>
                            </div>
                        </div>
                        @if (Model.EmailResult != null)
                        {
                            <div class="mt-4 p-3 bg-blue-50 dark:bg-blue-900/20 rounded border border-blue-200 dark:border-blue-800">
                                <p class="text-sm text-blue-900 dark:text-blue-100">
                                    üìß <strong>@Model.EmailResult.SuccessCount</strong> credential emails sent successfully.
                                </p>
                            </div>
                        }
                    </div>
                    <div class="flex gap-3">
                        <a href="/Admin/Users/ImportTeachers" class="bg-purple-600 hover:bg-purple-700 text-white font-semibold px-6 py-3 rounded-lg transition">Import More Teachers</a>
                        <a href="/Admin/Users" class="bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-3 rounded-lg transition">View All Users</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
