<!-- Tab Content -->
<div class="bg-white dark:bg-gray-800 rounded-b-lg shadow-lg p-6">
    @if (activeTab == "all")
    {
        <partial name="_AllTeachersTab" model="Model" />
    }
    else if (activeTab == "add")
    {
        <partial name="_AddTeacherTab" model="Model" />
    }
    else if (activeTab == "import")
    {
        <partial name="_ImportTeachersTab" model="Model" />
    }
    else if (activeTab == "assign")
    {
        <partial name="_AssignCoursesTab" model="Model" />
    }
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-75 z-50 flex items-center justify-center p-4">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-md w-full transform transition-all">
        <div class="p-6">
            <div class="flex items-center gap-4 mb-4">
                <div class="bg-red-100 dark:bg-red-900 rounded-full p-3">
                    <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white">Confirm Deletion</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">This action cannot be undone</p>
                </div>
            </div>
            
            <p id="deleteMessage" class="text-gray-700 dark:text-gray-300 mb-6">
                Are you sure you want to delete this teacher? All course assignments will be removed.
            </p>
            
            <div class="flex gap-3">
                <button onclick="cancelDelete()" class="flex-1 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-semibold py-3 px-4 rounded-lg transition duration-200">
                    Cancel
                </button>
                <button onclick="confirmDelete()" class="flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 shadow-lg">
                    Delete Teacher
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Assignment Confirmation Modal -->
<div id="deleteAssignmentModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-75 z-50 flex items-center justify-center p-4">
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-md w-full transform transition-all">
        <div class="p-6">
            <div class="flex items-center gap-4 mb-4">
                <div class="bg-orange-100 dark:bg-orange-900 rounded-full p-3">
                    <svg class="w-8 h-8 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white">Remove Assignment</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Confirm removal</p>
                </div>
            </div>
            
            <p class="text-gray-700 dark:text-gray-300 mb-6">
                Are you sure you want to remove this course assignment?
            </p>
            
            <div class="flex gap-3">
                <button onclick="cancelDeleteAssignment()" class="flex-1 bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-semibold py-3 px-4 rounded-lg transition duration-200">
                    Cancel
                </button>
                <button onclick="confirmDeleteAssignment()" class="flex-1 bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 shadow-lg">
                    Remove
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide success messages after 5 seconds
        setTimeout(function() {
            const successMsg = document.querySelector('.bg-green-50');
            if (successMsg) {
                successMsg.style.transition = 'opacity 0.5s';
                successMsg.style.opacity = '0';
                setTimeout(() => successMsg.remove(), 500);
            }
        }, 5000);

        // Delete Teacher Modal
        let deleteFormToSubmit = null;

        function showDeleteModal(event, teacherName) {
            event.preventDefault();
            deleteFormToSubmit = event.target.closest('form');
            document.getElementById('deleteMessage').textContent = 
                `Are you sure you want to delete ${teacherName}? All course assignments will be removed.`;
            document.getElementById('deleteModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function confirmDelete() {
            if (deleteFormToSubmit) {
                deleteFormToSubmit.submit();
            }
        }

        function cancelDelete() {
            document.getElementById('deleteModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
            deleteFormToSubmit = null;
        }

        // Delete Assignment Modal
        let deleteAssignmentFormToSubmit = null;

        function showDeleteAssignmentModal(event) {
            event.preventDefault();
            deleteAssignmentFormToSubmit = event.target.closest('form');
            document.getElementById('deleteAssignmentModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function confirmDeleteAssignment() {
            if (deleteAssignmentFormToSubmit) {
                deleteAssignmentFormToSubmit.submit();
            }
        }

        function cancelDeleteAssignment() {
            document.getElementById('deleteAssignmentModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
            deleteAssignmentFormToSubmit = null;
        }

        // Close modals on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                cancelDelete();
                cancelDeleteAssignment();
            }
        });

        // Close modals on background click
        document.getElementById('deleteModal')?.addEventListener('click', function(e) {
            if (e.target === this) cancelDelete();
        });

        document.getElementById('deleteAssignmentModal')?.addEventListener('click', function(e) {
            if (e.target === this) cancelDeleteAssignment();
        });
    </script>
}
