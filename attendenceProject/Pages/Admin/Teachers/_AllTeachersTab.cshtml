@model attendenceProject.Pages.Admin.Teachers.IndexModel

<!-- Search and Filter -->
<div class="mb-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Search Teacher</label>
            <input type="text" id="searchInput" 
                   class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                   placeholder="Name or email...">
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Designation</label>
            <select id="designationFilter" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                <option value="">All Designations</option>
                <option value="Professor">Professor</option>
                <option value="Associate Professor">Associate Professor</option>
                <option value="Assistant Professor">Assistant Professor</option>
                <option value="Lecturer">Lecturer</option>
            </select>
        </div>

        <div class="flex items-end">
            <button type="button" id="resetBtn" class="w-full bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
                Reset Filters
            </button>
        </div>
    </div>
</div>

<!-- Teachers List -->
@if (Model.Teachers.Any())
{
    <div id="teachersList" class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        @foreach (var teacher in Model.Teachers)
        {
            var teacherId = teacher.Teacher?.Id ?? 0;
            var assignments = Model.TeacherAssignments.ContainsKey(teacherId) 
                ? Model.TeacherAssignments[teacherId] 
                : new List<attendence.Domain.Entities.TeacherCourse>();

            <div class="teacher-card bg-white dark:bg-gray-800 rounded-lg shadow-md hover:shadow-xl transition-all duration-300 border border-gray-200 dark:border-gray-700 overflow-hidden flex flex-col" 
                 data-name="@teacher.FullName.ToLower()" 
                 data-email="@teacher.Email.ToLower()" 
                 data-designation="@teacher.Teacher?.Designation">
                
                <!-- Header with Status -->
                <div class="bg-gradient-to-r from-purple-50 to-indigo-50 dark:from-gray-700 dark:to-gray-600 p-4 border-b border-gray-200 dark:border-gray-600 flex-shrink-0">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="bg-purple-100 dark:bg-purple-900 rounded-full p-2.5">
                                <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-lg font-bold text-gray-900 dark:text-white">@teacher.FullName</h3>
                                <p class="text-sm text-gray-600 dark:text-gray-400 font-medium">@teacher.Teacher?.Designation</p>
                            </div>
                        </div>
                        <span class="@(teacher.IsActive ? "bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300" : "bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-300") text-xs font-bold px-3 py-1.5 rounded-full">
                            @(teacher.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                </div>

                <!-- Details Grid -->
                <div class="p-5 flex flex-col h-full">
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <!-- Email -->
                        <div class="col-span-2">
                            <div class="flex items-start gap-2">
                                <svg class="w-4 h-4 mt-0.5 text-indigo-600 dark:text-indigo-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                                <div class="flex-1 min-w-0">
                                    <p class="text-xs text-gray-500 dark:text-gray-400 font-medium">Email</p>
                                    <p class="text-sm text-gray-800 dark:text-gray-200 truncate">@teacher.Email</p>
                                </div>
                            </div>
                        </div>

                        <!-- Badge Number -->
                        <div>
                            <div class="flex items-start gap-2">
                                <svg class="w-4 h-4 mt-0.5 text-indigo-600 dark:text-indigo-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                </svg>
                                <div class="flex-1">
                                    <p class="text-xs text-gray-500 dark:text-gray-400 font-medium">Badge</p>
                                    <p class="text-sm text-gray-800 dark:text-gray-200 font-semibold">@teacher.Teacher?.BadgeNumber</p>
                                </div>
                            </div>
                        </div>

                        <!-- Assignments Count -->
                        <div>
                            <div class="flex items-start gap-2">
                                <svg class="w-4 h-4 mt-0.5 text-indigo-600 dark:text-indigo-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>
                                <div class="flex-1">
                                    <p class="text-xs text-gray-500 dark:text-gray-400 font-medium">Assignments</p>
                                    <p class="text-sm text-gray-800 dark:text-gray-200 font-semibold">@assignments.Count</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Assigned Courses Section (Always Present) -->
                    <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-gray-700 dark:to-gray-600 rounded-lg p-3 mb-4 flex-grow">
                        <p class="text-xs font-bold text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-1">
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                            </svg>
                            Assigned Courses
                        </p>
                        @if (assignments.Any())
                        {
                            <div class="flex flex-wrap gap-1.5">
                                @foreach (var assignment in assignments.Take(4))
                                {
                                    <span class="bg-indigo-600 dark:bg-indigo-700 text-white text-xs px-2.5 py-1 rounded-full font-medium">
                                        @assignment.Course.Code - @assignment.Section.Name
                                    </span>
                                }
                                @if (assignments.Count > 4)
                                {
                                    <span class="bg-gray-600 dark:bg-gray-700 text-white text-xs px-2.5 py-1 rounded-full font-medium">
                                        +@(assignments.Count - 4) more
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="flex items-center justify-center py-3">
                                <p class="text-xs text-gray-500 dark:text-gray-400 italic flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                                    </svg>
                                    No courses assigned yet
                                </p>
                            </div>
                        }
                    </div>

                    <!-- Action Buttons (Fixed Position) -->
                    <div class="flex gap-2 mt-auto">
                        <a href="/Admin/Users/Edit?id=@teacher.Id" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold py-2.5 px-4 rounded-lg transition duration-200 text-center shadow-sm hover:shadow-md">
                            Edit
                        </a>
                        <form method="post" asp-page-handler="DeleteTeacher" asp-route-id="@teacher.Id" class="flex-1" onsubmit="showDeleteModal(event, '@teacher.FullName'); return false;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white text-sm font-semibold py-2.5 px-4 rounded-lg transition duration-200 shadow-sm hover:shadow-md">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Results Counter -->
    <div class="mt-6 text-center">
        <p id="resultsCount" class="text-gray-600 dark:text-gray-400 font-medium">
            Showing <span id="visibleCount">@Model.Teachers.Count</span> of @Model.Teachers.Count teacher(s)
        </p>
    </div>
}
else
{
    <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No teachers found</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by adding a new teacher.</p>
        <div class="mt-6">
            <a href="/Admin/Teachers?tab=add" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add Teacher
            </a>
        </div>
    </div>
}

<!-- Real-time Search Script -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const designationFilter = document.getElementById('designationFilter');
        const resetBtn = document.getElementById('resetBtn');
        const teacherCards = document.querySelectorAll('.teacher-card');
        const visibleCountEl = document.getElementById('visibleCount');
        const totalCount = teacherCards.length;

        function filterTeachers() {
            const searchTerm = searchInput.value.toLowerCase().trim();
            const designation = designationFilter.value;
            let visibleCount = 0;

            teacherCards.forEach(card => {
                const name = card.getAttribute('data-name');
                const email = card.getAttribute('data-email');
                const cardDesignation = card.getAttribute('data-designation');

                const matchesSearch = searchTerm === '' || 
                    name.includes(searchTerm) || 
                    email.includes(searchTerm);
                
                const matchesDesignation = designation === '' || 
                    cardDesignation === designation;

                if (matchesSearch && matchesDesignation) {
                    card.style.display = '';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            // Update count
            visibleCountEl.textContent = visibleCount;

            // Show no results message if needed
            if (visibleCount === 0) {
                showNoResults();
            } else {
                hideNoResults();
            }
        }

        function showNoResults() {
            const existingMsg = document.getElementById('noResultsMsg');
            if (!existingMsg) {
                const teachersList = document.getElementById('teachersList');
                const noResultsDiv = document.createElement('div');
                noResultsDiv.id = 'noResultsMsg';
                noResultsDiv.className = 'col-span-full text-center py-12';
                noResultsDiv.innerHTML = `
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No teachers match your search</h3>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Try adjusting your filters or search term.</p>
                `;
                teachersList.appendChild(noResultsDiv);
            }
        }

        function hideNoResults() {
            const existingMsg = document.getElementById('noResultsMsg');
            if (existingMsg) {
                existingMsg.remove();
            }
        }

        function resetFilters() {
            searchInput.value = '';
            designationFilter.value = '';
            filterTeachers();
        }

        // Event listeners
        searchInput.addEventListener('input', filterTeachers);
        designationFilter.addEventListener('change', filterTeachers);
        resetBtn.addEventListener('click', resetFilters);
    });
</script>
