@model attendenceProject.Pages.Admin.Students.IndexModel

<div class="max-w-3xl mx-auto">
    <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-gray-700 dark:to-gray-600 rounded-lg p-8">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-white mb-6 flex items-center gap-3">
            <div class="bg-gradient-to-r from-blue-600 to-indigo-600 p-3 rounded-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                </svg>
            </div>
            Add New Student
        </h3>

        <form method="post" asp-page-handler="AddStudent" data-ajax="true" data-success="onStudentAdded" class="space-y-6">
            @Html.AntiForgeryToken()

            <!-- Personal Information -->
            <div class="bg-white dark:bg-gray-800 rounded-lg p-6 space-y-4">
                <h4 class="font-semibold text-gray-700 dark:text-gray-300 flex items-center gap-2 mb-4">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    Personal Information
                </h4>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Full Name -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Full Name <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="NewStudent.FullName" type="text"
                               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                               placeholder="Enter full name" required />
                    </div>

                    <!-- Email -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Email <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="NewStudent.Email" type="email"
                               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                               placeholder="student@example.com" required />
                    </div>

                    <!-- Roll Number -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Roll Number <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="NewStudent.RollNo" type="text"
                               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                               placeholder="2024-CS-001" required />
                    </div>

                    <!-- Father Name -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Father's Name
                        </label>
                        <input asp-for="NewStudent.FatherName" type="text"
                               class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                               placeholder="Enter father's name" />
                    </div>
                </div>
            </div>

            <!-- Academic Information -->
            <div class="bg-white dark:bg-gray-800 rounded-lg p-6 space-y-4">
                <h4 class="font-semibold text-gray-700 dark:text-gray-300 flex items-center gap-2 mb-4">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    Academic Information
                </h4>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- Badge Selection -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Badge <span class="text-red-500">*</span>
                        </label>
                        <select id="badgeSelect" asp-for="NewStudent.BadgeId" asp-items="Model.NewStudent.BadgeOptions"
                                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                                required>
                            <option value="">Choose badge...</option>
                        </select>
                    </div>

                    <!-- Semester Selection -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Semester <span class="text-red-500">*</span>
                        </label>
                        <select id="semesterSelect" asp-for="NewStudent.Semester"
                                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                                required disabled>
                            <option value="">Select badge first...</option>
                        </select>
                    </div>

                    <!-- Session Selection -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Session <span class="text-red-500">*</span>
                        </label>
                        <select id="sessionSelect" asp-for="NewStudent.Session"
                                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                                required disabled>
                            <option value="">Select semester first...</option>
                        </select>
                    </div>

                    <!-- Section Selection -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Section <span class="text-red-500">*</span>
                        </label>
                        <select id="sectionSelect" asp-for="NewStudent.SectionId"
                                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                                required disabled>
                            <option value="">Select session first...</option>
                        </select>
                    </div>
                </div>

                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">Select badge, semester, session, and section for this student</p>
            </div>

            <!-- Account Settings -->
            <div class="bg-white dark:bg-gray-800 rounded-lg p-6">
                <h4 class="font-semibold text-gray-700 dark:text-gray-300 flex items-center gap-2 mb-4">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Account Settings
                </h4>

                <label class="flex items-center">
                    <input asp-for="NewStudent.SendWelcomeEmail" type="checkbox" checked
                           class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
                    <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Send welcome email with login credentials</span>
                </label>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">
                    A secure password will be auto-generated and emailed to the student
                </p>
            </div>

            <!-- Info Box -->
            <div class="bg-blue-50 dark:bg-blue-900 border-l-4 border-blue-500 p-4 rounded">
                <div class="flex items-start">
                    <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                        <p class="text-sm font-medium text-blue-800 dark:text-blue-200">Important Notes</p>
                        <ul class="mt-2 text-sm text-blue-700 dark:text-blue-300 space-y-1">
                            <li>• Student will be automatically enrolled in the selected section</li>
                            <li>• A secure password will be generated automatically</li>
                            <li>• Login credentials will be sent via email</li>
                            <li>• Email address must be unique</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="flex gap-4">
                <button type="submit" class="flex-1 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-3 px-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300 flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                    </svg>
                    Add Student
                </button>
                <a href="?tab=all" class="bg-gray-200 hover:bg-gray-300 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-semibold py-3 px-6 rounded-lg transition duration-200">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
<script>
    // Store all sections data
    const sectionsData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.AllSectionsForFiltering));
    
    const badgeSelect = document.getElementById('badgeSelect');
    const semesterSelect = document.getElementById('semesterSelect');
    const sessionSelect = document.getElementById('sessionSelect');
    const sectionSelect = document.getElementById('sectionSelect');

    // Badge change handler
    badgeSelect.addEventListener('change', function() {
        const badgeId = parseInt(this.value);
        
        // Reset dependent dropdowns
        semesterSelect.innerHTML = '<option value="">Choose semester...</option>';
        sessionSelect.innerHTML = '<option value="">Select semester first...</option>';
        sectionSelect.innerHTML = '<option value="">Select session first...</option>';
        sessionSelect.disabled = true;
        sectionSelect.disabled = true;
        
        if (!badgeId) {
            semesterSelect.disabled = true;
            semesterSelect.innerHTML = '<option value="">Select badge first...</option>';
            return;
        }

        // Get unique semesters for selected badge
        const semesters = [...new Set(sectionsData
            .filter(s => s.badgeId === badgeId)
            .map(s => s.semester))]
            .sort((a, b) => a - b);
        
        semesters.forEach(sem => {
            const option = document.createElement('option');
            option.value = sem;
            option.textContent = `Semester ${sem}`;
            semesterSelect.appendChild(option);
        });
        
        semesterSelect.disabled = false;
    });

    // Semester change handler
    semesterSelect.addEventListener('change', function() {
        const badgeId = parseInt(badgeSelect.value);
        const semester = parseInt(this.value);
        
        // Reset dependent dropdowns
        sessionSelect.innerHTML = '<option value="">Choose session...</option>';
        sectionSelect.innerHTML = '<option value="">Select session first...</option>';
        sectionSelect.disabled = true;
        
        if (!semester) {
            sessionSelect.disabled = true;
            return;
        }

        // Get unique sessions for selected badge and semester
        const sessions = [...new Set(sectionsData
            .filter(s => s.badgeId === badgeId && s.semester === semester)
            .map(s => s.session))]
            .sort();
        
        sessions.forEach(sess => {
            const option = document.createElement('option');
            option.value = sess;
            option.textContent = sess;
            sessionSelect.appendChild(option);
        });
        
        sessionSelect.disabled = false;
    });

    // Session change handler
    sessionSelect.addEventListener('change', function() {
        const badgeId = parseInt(badgeSelect.value);
        const semester = parseInt(semesterSelect.value);
        const session = this.value;
        
        // Reset section dropdown
        sectionSelect.innerHTML = '<option value="">Choose section...</option>';
        
        if (!session) {
            sectionSelect.disabled = true;
            return;
        }

        // Get sections for selected badge, semester, and session
        const sections = sectionsData
            .filter(s => s.badgeId === badgeId && s.semester === semester && s.session === session)
            .sort((a, b) => a.name.localeCompare(b.name));
        
        sections.forEach(sec => {
            const option = document.createElement('option');
            option.value = sec.id;
            option.textContent = sec.name;
            sectionSelect.appendChild(option);
        });
        
        sectionSelect.disabled = false;
    });
</script>

<!-- AJAX Success Callback -->
<script>
function onStudentAdded(response) {
    if (response.success && response.student) {
        // Reset form
        document.querySelector('form[asp-page-handler="AddStudent"]').reset();
        
        // Reset cascade selects
        document.getElementById('semesterSelect').disabled = true;
        document.getElementById('sessionSelect').disabled = true;
        document.getElementById('sectionSelect').disabled = true;
        
        // Refresh the pagination if on "All Students" tab
        if (typeof pagination !== 'undefined' && pagination) {
            // Add student to the top of the list for instant feedback
            const studentCard = renderStudentCard(response.student);
            pagination.addItem(studentCard, 'top');
        }
        
        // Switch to "All Students" tab after a short delay
        setTimeout(() => {
            window.location.href = '?tab=all';
        }, 1500);
    }
}
</script>