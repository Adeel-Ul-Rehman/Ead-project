@model attendenceProject.Pages.Admin.Badges.IndexModel

<div class="max-w-2xl mx-auto">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8">
        <div class="flex items-center gap-3 mb-6">
            <div class="bg-purple-100 dark:bg-purple-900 p-3 rounded-full">
                <svg class="w-6 h-6 text-purple-600 dark:text-purple-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Add New Badge</h2>
        </div>

        <form method="post" asp-page-handler="Add" class="space-y-6">
            @Html.AntiForgeryToken()
            
            <!-- Badge Name -->
            <div>
                <label for="badgeName" class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2">
                    Badge Name <span class="text-red-500">*</span>
                </label>
                <input type="text" asp-for="BadgeName" id="badgeName" required
                       class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                       placeholder="e.g., Morning, Evening, Weekend">
                <span asp-validation-for="BadgeName" class="text-red-500 text-sm mt-1"></span>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">A descriptive name for the section badge</p>
            </div>

            <!-- Buttons -->
            <div class="flex items-center gap-4 pt-6 border-t border-gray-200 dark:border-gray-700">
                <button type="submit"
                        class="flex-1 bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white font-semibold px-6 py-3 rounded-lg transition duration-200 flex items-center justify-center gap-2 shadow-lg hover:shadow-xl">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Add Badge
                </button>
                <a href="?tab=all"
                   class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold px-6 py-3 rounded-lg transition duration-200 flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Cancel
                </a>
            </div>
        </form>
    </div>

    <!-- Guidelines Card -->
    <div class="mt-6 bg-blue-50 dark:bg-blue-900/30 border-l-4 border-blue-500 p-4 rounded-r-lg">
        <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-blue-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
                <h4 class="text-sm font-semibold text-blue-900 dark:text-blue-200 mb-1">Badge Guidelines</h4>
                <ul class="text-sm text-blue-800 dark:text-blue-300 space-y-1 list-disc list-inside">
                    <li>Badge names must be unique</li>
                    <li>Use descriptive names (e.g., "Morning", "Evening", "Weekend")</li>
                    <li>Badges help organize and categorize sections</li>
                    <li>Common examples: Time-based (Morning/Evening), Day-based (Weekday/Weekend), or Custom categories</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
