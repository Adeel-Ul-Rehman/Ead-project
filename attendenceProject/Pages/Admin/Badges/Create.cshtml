@page
@model attendenceProject.Pages.Admin.Badges.CreateModel
@{
    ViewData["Title"] = "Create Badge";
}

<!-- Header Section -->
<div class="mb-6 sm:mb-8">
    <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-800 dark:text-white flex items-center gap-2 sm:gap-3">
        <span class="text-3xl sm:text-4xl md:text-5xl">âž•</span>
        <span>Create New Badge</span>
    </h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2 text-base sm:text-lg">Add a new department or program</p>
</div>

<!-- Form Card -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-4 sm:p-6 md:p-8 max-w-2xl">
    <form method="post">
        @Html.AntiForgeryToken()
        
        <div class="space-y-6">
            <!-- Name Field -->
            <div>
                <label asp-for="Badge.Name" class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-2">
                    Badge Name <span class="text-red-500">*</span>
                </label>
                <input asp-for="Badge.Name" type="text" required
                       class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-transparent dark:bg-gray-700 dark:text-white transition duration-200"
                       placeholder="e.g., CS, SE, IT, BBA">
                <span asp-validation-for="Badge.Name" class="text-red-500 text-sm mt-1"></span>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Department or program name/abbreviation</p>
            </div>

            <!-- Validation Summary -->
            <div asp-validation-summary="All" class="text-red-500 text-sm bg-red-50 dark:bg-red-900 border border-red-200 dark:border-red-700 rounded-lg p-3"></div>

            <!-- Action Buttons -->
            <div class="flex gap-4 pt-4">
                <button type="submit" class="flex-1 bg-gradient-to-r from-pink-500 to-purple-600 hover:from-pink-600 hover:to-purple-700 text-white font-bold py-3 px-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300 flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Create Badge
                </button>
                <a href="/Admin/Badges" class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transition duration-300 flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>

<!-- Info Card -->
<div class="mt-6 bg-blue-50 dark:bg-blue-900 border-l-4 border-blue-500 p-4 rounded-lg max-w-2xl">
    <div class="flex items-start">
        <svg class="w-6 h-6 text-blue-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
            <h4 class="text-sm font-bold text-blue-800 dark:text-blue-200 mb-1">About Badges</h4>
            <p class="text-sm text-blue-700 dark:text-blue-300">
                Badges represent departments, programs, or disciplines in your university. 
                Each section must be associated with a badge. Students belong to sections, which are linked to badges.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
