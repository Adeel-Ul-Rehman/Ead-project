@page
@model attendenceProject.Pages.Admin.BulkOperations.GenerateLecturesModel
@{
    ViewData["Title"] = "Bulk Generate Lectures";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-white">Bulk Generate Lectures</h1>
    <p class="text-gray-600 dark:text-gray-400 mt-1">Automatically create lectures from timetable rules</p>
</div>

<!-- Instructions -->
<div class="bg-blue-50 dark:bg-blue-900 border-l-4 border-blue-500 p-4 mb-6">
    <div class="flex">
        <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
        </div>
        <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800 dark:text-blue-200">How it works</h3>
            <div class="mt-2 text-sm text-blue-700 dark:text-blue-300">
                <ul class="list-disc list-inside space-y-1">
                    <li>Select a date range for lecture generation</li>
                    <li>System will check all active timetable rules</li>
                    <li>Lectures will be created based on the days of week specified in rules</li>
                    <li>Holidays and weekends are automatically skipped</li>
                    <li>Duplicate lectures won't be created</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Generation Form -->
<div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6 mb-6">
    <form method="post">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <label asp-for="StartDate" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Start Date *</label>
                <input asp-for="StartDate" type="date" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <span asp-validation-for="StartDate" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="EndDate" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">End Date *</label>
                <input asp-for="EndDate" type="date" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                <span asp-validation-for="EndDate" class="text-sm text-gray-500">Maximum 90 days from start date</span>
                <span asp-validation-for="EndDate" class="text-red-500 text-sm"></span>
            </div>
        </div>

        <div class="flex gap-3">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md transition duration-200 flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Generate Lectures
            </button>
            <a href="/Admin/Dashboard" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-2 rounded-md transition duration-200">
                Cancel
            </a>
        </div>
    </form>
</div>

<!-- Results -->
@if (Model.GenerationResult != null)
{
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
        <h2 class="text-lg font-semibold text-gray-800 dark:text-white mb-4">Generation Results</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-green-100 dark:bg-green-900 p-4 rounded-lg">
                <p class="text-sm text-green-600 dark:text-green-300">Created</p>
                <p class="text-2xl font-bold text-green-800 dark:text-green-200">@Model.GenerationResult.LecturesCreated</p>
            </div>
            <div class="bg-yellow-100 dark:bg-yellow-900 p-4 rounded-lg">
                <p class="text-sm text-yellow-600 dark:text-yellow-300">Skipped (Already Exist)</p>
                <p class="text-2xl font-bold text-yellow-800 dark:text-yellow-200">@Model.GenerationResult.LecturesSkipped</p>
            </div>
            <div class="bg-blue-100 dark:bg-blue-900 p-4 rounded-lg">
                <p class="text-sm text-blue-600 dark:text-blue-300">Total Processed</p>
                <p class="text-2xl font-bold text-blue-800 dark:text-blue-200">@Model.GenerationResult.TotalProcessed</p>
            </div>
        </div>

        <div class="bg-gray-50 dark:bg-gray-700 p-4 rounded-lg">
            <p class="text-sm text-gray-600 dark:text-gray-400">
                <strong>Summary:</strong> 
                Generated lectures from @Model.StartDate.Value.ToString("MMM dd, yyyy") to @Model.EndDate.Value.ToString("MMM dd, yyyy").
                Processed @Model.GenerationResult.TimetableRulesProcessed timetable rule(s).
            </p>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
